@{
    Layout = "";
}
<style>
    body {
        font-family: "Microsoft Yahei";
    }

    .btn {
        margin-top: 20px;
        padding: 5px 25px;
        border: none;
        color: #F0F0F0;
        font-size: 12px;
        outline: none;
        cursor: pointer;
        background: cornflowerblue;
        border-color: cornflowerblue;
    }
</style>

<div class="brand">
    <fieldset>
        <input type="checkbox"  ShopCertification="1" />
        <label> 博世认证</label>
    </fieldset>

    <input type="button" onclick="StoreAuthenticationChecked()" class="btn" value="选择" />
</div>
<script>
    var StoreAuthentications = $("#StoreAuthentication").val() || "";

    $(function () {
        if (StoreAuthentications & 1 == 1) {                               
            $(".brand :checkbox").attr("checked", "checked");
        }
    })

    function StoreAuthenticationChecked() {
        var storeAuthentication = "";
        var StoreAuthenticationName = "";
        if ($(".brand :checkbox").attr("checked")) {
            storeAuthentication = $(".brand :checkbox").attr("ShopCertification");
            StoreAuthenticationName = "博世认证";
        }
        $("#StoreAuthenticationName").val(StoreAuthenticationName)
        $("#StoreAuthentication").val(storeAuthentication);
        $("#AddStoreAuthentication").dialog('close');
    }
</script>