<script>
	function btnDelete(ID) {
		if (confirm('确定要删除吗？删除后下面的客服集合也会被删除!!!')) {
			$.ajax({
				type: "post",
				url: '/Airlines/DeleteAirlines',
				data: { "id": ID },
				success: function (result) {
					if (result == true) {
					    window.location.href = "/Airlines/AirlinesIndex";
					}
				}
			});
		}
	}

	function btnAdd() {
	    $("#AddItem").load('/Airlines/AddAirlinesView');
		$("#AddItem").dialog({
			title: "添加客服信息",
			width: 400,
			height: 150,
			modal: true
		});
	}

	function btnEdit(ID) {
	    $("#AddItem").load('/Airlines/EditAirlinesView?Id=' + ID);
	    $("#AddItem").dialog({
	        title: "修改客服信息",
	        width: 400,
	        height: 150,
	        modal: true
	    });
	}

</script>
<div style="clear:both;"></div>
<div style="float:left;">
	<h2>
        客服配置
	</h2>
</div>
<div style="float:right;">
