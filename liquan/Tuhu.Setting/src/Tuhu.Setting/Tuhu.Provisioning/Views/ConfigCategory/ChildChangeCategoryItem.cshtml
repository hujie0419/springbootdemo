<table style="width:100%">
    <tbody>
    <tr>
        <td>类目名称 </td>
        <td><input class="CategoryName" id="CategoryName" type="text" value="@Model.CategoryName"/><input id="CategoryNameValid" style="color: red; display: none;" /></td>
    </tr>
        <tr>
            <td>类目副标题 </td>
            <td><input class="SubTitle" id="SubTitle" type="text" value="@Model.SubTitle" /><input id="SubTitleValid" style="color: red; display: none;" /></td>
        </tr>
    <tr>
        <td>显示顺序 </td>
        <td> <input class="Sort" id="Sort" type="text" value="@Model.Sort"/><input id="SortValid" style="color: red; display: none;" /></td>
    </tr>
        <tr>
            <td>显示商品个数 </td>
            <td> <input class="ShowNum" id="ShowNum" type="text" value="@Model.ShowNum" /><input id="ShowNumValid" style="color: red; display: none;" /></td>
        </tr>
        <tr>
            <td>是否显示</td>
            <td>
                @Html.RadioButtonFor(T => T.IsShow, true, new { @id = "radio1", @name = "IsShow" })是
                @Html.RadioButtonFor(T => T.IsShow, false, new { @id = "radio0", @name = "IsShow" })否
            </td>
        </tr>
