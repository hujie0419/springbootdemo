@model Tuhu.Provisioning.DataAccess.Entity.BusinessKeywordsConfig
@{
    Layout = null;
}

<style>
    .btn {
        margin-top: 20px;
        padding: 5px 25px;
        border: none;
        color: #F0F0F0;
        font-size: 12px;
        outline: none;
        cursor: pointer;
        background: cornflowerblue;
        border-color: cornflowerblue;
    }

    a {
        color: cornflowerblue;
    }
</style>
<script src="../../Scripts/ajaxfileupload.js" type="text/javascript"></script>

<form action="/BusinessKeywordsConfig/Edit" method="post">  
    <input type="hidden" value="@Model.Id" name="Id"/>
    <div>
        <table>
            <tr>
                <td>关键词</td>
                <td>
                    <input type="text" value="@Model.Keywords" id="Keywords" required="required" name="Keywords" />
                </td>
            </tr> 
            <tr>
                <td>顺序</td>
                <td>
                    <input type="number" value="@Model.Sort" id="Sort" required="required" name="Sort" />
                </td>
            </tr> 
            <tr>
                <td></td>
                <td><input type="submit" value="保存" class="btn" /></td>
            </tr>
        </table>
    </div>
</form>
