@model Tuhu.Provisioning.DataAccess.Entity.ProductSearch.SearchWordBrandsConfig
@{
    Layout = null;
}

<style>
    .btn {
        margin-top: 20px;
        padding: 5px 25px;
        border: none;
        color: #F0F0F0;
        font-size: 12px;
        outline: none;
        cursor: pointer;
        background: cornflowerblue;
        border-color: cornflowerblue;
    }

    a {
        color: cornflowerblue;
    }
</style>
<script src="../../Scripts/ajaxfileupload.js" type="text/javascript"></script>

<form action="/SearchWordBrandsConfig/Edit" method="post" id="saveForm" onsubmit="return toVaild()">
    <input type="hidden" value="@Model.Pkid" name="Pkid" />
    <div>
        <table>
            <tr >
                <td>关键词</td>
                <td>
                    <input type="text" value="@Model.Keywords" id="Keywords" required="required" name="Keywords" />
                </td>
            </tr>

            <tr >
                <td>品牌</td>
                <td>
                    <input type="text" value="@Model.Brands" id="Brands" required="required" name="Brands" />
                </td>
            </tr>

            <tr >
                <td style="min-width:30%">是否显示</td>
                <td>
                    <select id="IsShow" name="IsShow">
                        <option value="0">否</option>
                        <option value="1">是</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="保存" class="btn" /></td>
            </tr>
        </table>
    </div>
</form>
<script>
    $(function () {
        $("#IsShow").val(@(Model.IsShow));
    })

    function toVaild() {
        var brands = $("#Brands").val();
        var keywords = $("#Keywords").val();
        if (keywords == "") {
            alert("必须输入关键词");
            $("#Brands").focus();
            return false;
        }
        if (brands == "") {
            alert("必须输入品牌");
            $("#Keywords").focus();
            return false;
        }
        var brandList = brands.split(" ");
        var cnt = 0;
        for (i = 0; i < brandList.length; i++) {
            if (brandList[i] != "")
                cnt = cnt + 1;
        }
        if (cnt < 1) {
            alert("品牌至少填写一个");
            $("#Keywords").focus();
            return false;
        }
        if (cnt > 3) {
            alert("品牌不能多于三个");
            $("#Keywords").focus();
            return false;
        }
        return true;
    }
</script>