                    "DifferencePrice": $.trim($("#DifferencePrice").val()),
                    "OrderId": $.trim($("#OrderId").val()),
                    "ProductName": $.trim($("#ProductName").val()),
                    "Status": $('#Status option:selected').val(),
                    "StartApplyTime": $.trim($("#StartApplyTime").val()),
                    "EndApplyTime": $.trim($("#EndApplyTime").val()),
                    "StartAuditTime": $.trim($("#StartAuditTime").val()),
                    "EndAuditTime": $.trim($("#EndAuditTime").val()),
                    "OrderChannel": $.trim($("#OrderChannel").val()),
                },
                success: function (result) {
                    $(".listdata").html(result);
                },
                error: function (result) {
                    alert("失败!")
                }
            });
        },
        "Export": function () {
            //$.ajax({
            //    type: "POST",
            //    url: "/ApplyCompensate/Export",
            //    data: {
            //        "UserName": $.trim($("#UserName").val()),
            //        "PhoneNumber": $.trim($("#PhoneNumber").val()),
            //        "DifferencePrice": $.trim($("#DifferencePrice").val()),
            //        "OrderId": $.trim($("#OrderId").val()),
            //        "ProductId": $.trim($("#ProductId").val())
            //    },
            //    success: function (result) {
            //        if (result) {
            //            alert("导出成功");
            //        }
            //    },
            //    error: function (result) {
            //        alert("失败!")
            //    }
            //});
          
            window.location.href = "/ApplyCompensate/Export?UserName=" + $.trim($("#UserName").val()) +
                                "&PhoneNumber=" + $.trim($("#PhoneNumber").val()) +
                                "&DifferencePrice=" + $.trim($("#DifferencePrice").val()) +
                                "&OrderId=" + $.trim($("#OrderId").val()) +
                                "&ProductName=" + $.trim($("#ProductName").val()) +
                                "&Status=" + $('#Status option:selected').val() +
                                "&StartApplyTime=" + $.trim($("#StartApplyTime").val()) +
                                "&EndApplyTime=" + $.trim($("#EndApplyTime").val()) +
                                "&StartAuditTime=" + $.trim($("#StartAuditTime").val()) +
                                "&EndAuditTime=" + $.trim($("#EndAuditTime").val()) +
                                "&OrderChannel=" + $.trim($("#OrderChannel").val());
        },
        "Update": function (id) {
            $("#AddItem").load('/ApplyCompensate/Edit?id=' + id);
            $("#AddItem").dialog({
                title: "申诉详情",
                width: 700,
                height: 700,
                modal: true
            });
        },
        "Audit": function (id, status, text) {
            if (window.confirm("确定" + text)) {
                $.ajax({
                    type: "POST",
                    url: "/ApplyCompensate/Edit",
                    data: { "Id": id, "Status": status },
                    success: function (result) {
                        if (result) {
                            window.location.reload(true);
                        } else {
                            alert(text + "失败");
                        }
                    },
                    error: function (result) {
                    }
                });
            }
        }
    }
</script>  