@{
    ViewBag.Title = "GetTireSizeConfig";
    Layout = null;
}
@model Tuhu.Provisioning.DataAccess.Entity.TireSizeConfig


<form id="editTireSize" class="easyui-form editForm">
    <table>
        <tr>
            <td colspan="4" style="text-align:center;">
                <input type="checkbox" id="IsChangeTire" name="IsChangeTire"  @(Model.IsChangeTire == 1?"checked=\"checked\"":"") /><span>可换车</span>
                <input type="checkbox" id="IsChangeTireSize" name="IsChangeTireSize"  @(Model.IsChangeTireSize == 1?"checked=\"checked\"":"") /><span>可换轮胎规格</span>
                <input type="checkbox" id="IsShowTag" name="IsShowTag"  @(Model.IsShowTag == 1?"checked=\"checked\"":"") /><span>显示适配标签</span>
                <input type="checkbox" id="IsMargin" name="IsMargin"  @(Model.IsMargin == 1?"checked=\"checked\"":"") /><span>有分割线</span>
            </td>
        </tr>
        <tr>
            <td>分割线颜色:</td>
            <td>
                <input type="text" class="easyui-textbox" style="width:350px;"  id="MarginColor" name="MarginColor" value="@Model.MarginColor" />
            </td>
            <td>
                填充颜色:
            </td>
            <td>
                <input type="text" class="easyui-textbox" style="width:350px;" id="FillColor" name="FillColor" value="@Model.FillColor" />
            </td>
        </tr>
        <tr>
            <td>
                提示语颜色:
            </td>
            <td>
                <input type="text" class="easyui-textbox" style="width:350px;" id="PromptColor" name="PromptColor" value="@Model.PromptColor" />
            </td>
            <td>
                提示语字号：
            </td>
            <td>
                <input type="text" class="easyui-textbox" style="width:350px;" id="PromptFontSize" name="PromptFontSize" value="@Model.PromptFontSize" />
            </td>
        </tr>
        <tr>
            <td>
                车主信息颜色:
            </td>
            <td>
                <input type="text" class="easyui-textbox" style="width:350px;" id="CarInfoColor" name="CarInfoColor" value="@Model.CarInfoColor" />
            </td>
            <td>
                车主信息字号:
            </td>
            <td>
                <input type="text" class="easyui-textbox" style="width:350px;" id="CarInfoFontSize" name="CarInfoFontSize" value="@Model.CarInfoFontSize" />
            </td>
        </tr>

        <tr>
            <td>
                无车型提示语:
            </td>
            <td colspan="3">
                <input type="text" class="easyui-textbox" style="width:750px;" id="NoCarTypePrompt" name="NoCarTypePrompt" value="@Model.NoCarTypePrompt" />
            </td>
        </tr>
        <tr>
            <td>
                无规格提示语:
            </td>
            <td colspan="3">
                <input type="text" class="easyui-textbox" style="width:750px;" id="NoFormatPrompt" name="NoFormatPrompt" value="@Model.NoFormatPrompt" />
            </td>
        </tr>

    </table>

</form>
<script type="text/javascript">
    function GetTireSizeConfig() {
        var data = {};
        data.IsChangeTire = $('#IsChangeTire:checked').val() != undefined ? 1 : 0;
        data.IsChangeTireSize = $('#IsChangeTireSize:checked').val() != undefined ? 1 : 0;
        data.IsShowTag = $('#IsShowTag:checked').val() != undefined ? 1 : 0;
        data.IsMargin = $('#IsMargin:checked').val() != undefined ? 1 : 0;
        data.MarginColor = $('#MarginColor').val();
        data.FillColor = $('#FillColor').val();
        data.PromptColor = $('#PromptColor').val();
        data.PromptFontSize = $('#PromptFontSize').val();

        data.CarInfoColor = $('#CarInfoColor').val();
        data.CarInfoFontSize = $('#CarInfoFontSize').val();
        data.NoCarTypePrompt = $('#NoCarTypePrompt').val();
        data.NoFormatPrompt = $('#NoFormatPrompt').val();
        return data;
    }
</script>