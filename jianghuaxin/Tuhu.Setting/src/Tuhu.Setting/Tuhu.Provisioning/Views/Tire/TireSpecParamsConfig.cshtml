@using Tuhu.Provisioning.DataAccess.Entity.Tire
@model List<TireSpecParamsModel>
@{
    ViewBag.Title = "轮胎规格参数查询";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head{
    <link href="~/Content/nfine/js/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <style>
        .title {
            float: left;
        }

        .content {
            clear: both;
        }

        .condition .name {
            font-size: 16px;
            font-weight: bold;
        }

        .condition > div {
            margin-bottom: 10px;
        }
    </style>
}
<div class="title">
    <h2>轮胎规格指数管理后台</h2>
</div>
<div class="content">
    <div class="condition">
        <div>
            <span class="name">筛选条件：</span>
        </div>
        <div>
            <span class="name">名称：</span>
            <input id="InputDisplayName" type="text" name="DisplayName" value="" />
        </div>
        <div>
            <span class="name">PID：</span>
            <input id="InputPID" type="text" name="PID" value="" />
        </div>
        <div>
            <button type="button" class="btn btn-primary btn-small" onclick="CheckToSubmit(1)">查询</button>
            <button type="button" class="btn btn-primary btn-small" onclick="ClearInput()">清空</button>
        </div>
    </div>
    <div>
        每页显示：
        <select id="PageDataQuantity" onchange="CheckToSubmit(1)">
            <option value="10" selected="selected">10</option>
            <option value="20">20</option>
            <option value="50">50</option>
            <option value="100">100</option>
        </select> 条&nbsp;&nbsp;
        <span id="DataCountInfo"></span>
    </div>
</div>
<div class="contact" id="ForTableTireSpecParamsConfig" style="margin:10px 0 10px 0;">
    <!--输出表格-->
</div>
<div id="TireSpecParamsConfigEditModule" style="display:none;"></div>
<div id="TireSpecParamsEditHistoryModule" style="display:none;"></div>

<script src="/Scripts/ajaxfileupload.js" type="text/javascript"></script>
<script type="text/javascript" src="/Scripts/TimeObjectUtil.js"></script>
<link href="/Scripts/jquery-ui-timepicker-addon/jquery-ui-timepicker-addon.css" rel="stylesheet" type="text/css" />
<link href="/Scripts/ztree/css/zTreeStyle/zTreeStyle.css" rel="stylesheet" type="text/css" />
<script src="/Scripts/jquery-ui-timepicker-addon/jquery-ui-sliderAccess.js" type="text/javascript"></script>
<script src="/Scripts/jquery-ui-timepicker-addon/jquery-ui-timepicker-addon.js" type="text/javascript"></script>
<script src="/Scripts/zTree/js/jquery.ztree.core-3.5.min.js" type="text/javascript"></script>
<script src="/Scripts/zTree/js/jquery.ztree.excheck-3.5.min.js" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#ForTableTireSpecParamsConfig").on("click", ".pager>a", function (event) {
            event.preventDefault();
            var url = $(this).attr("href");
            if (url) {
                $.post(url, function (html, status) {
                    if (status === "success") {
                        $("#ForTableTireSpecParamsConfig").html(html);
                    }
                });
            }
        });
        CheckToSubmit(1);
    });
    function CheckToSubmit(index) {
        var pid = $("#InputPID").val();
        var displayName = $("#InputDisplayName").val();
        var pagedataquantity = $("#PageDataQuantity").val();
        var pageIndex = index;

        $.post("/Tire/TireSpecParamsConfigList", {
            PIDCriterion: pid,
            DisplayNameCriterion: displayName,
            PageIndex: pageIndex,
            PageDataQuantity: pagedataquantity
        }, function (html, status) {
            if (status === "success") {
                $("#ForTableTireSpecParamsConfig").html(html);
            }
        });
    }
    function ClearInput() {
        window.location.reload();
    }
    function TireSpecParamsConfigEdit(pid) {
        $("#TireSpecParamsConfigEditModule").html("").load("/Tire/TireSpecParamsConfigEditModule?pid=" + pid);
        $("#TireSpecParamsConfigEditModule").dialog({
            title: "编辑轮胎规格参数",
            width: 400,
            height: "auto",
            modal: true,
            resizable: false,
            buttons: {
                "保存": function () {
                    SaveTireSpecParamsConfig(this);
                },
                "取消": function () {
                    $(this).dialog("close");
                }
            }
        });
    }
    function TireSpecParamsEditHistory(pid) {
        $("#TireSpecParamsEditHistoryModule").html("").load("/Tire/TireSpecParamsEditHistoryModule?pid=" + pid);
        $("#TireSpecParamsEditHistoryModule").dialog({
            title: "操作记录",
            width: 800,
            height: 400,
            modal: true,
            resizable: true
        });
    }
</script>
