@using Tuhu.Provisioning.DataAccess.Entity.Discovery;
@model Article
    @{ 
        Model.CoverImage = string.IsNullOrEmpty(Model.CoverImage) ? "" : Model.CoverImage.Split(new char[] { ';' }, StringSplitOptions.RemoveEmptyEntries)[0];
    }
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>@Model.SmallTitle</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <link rel="stylesheet" type="text/css" href="~/Content/detailCss/common.css">
    <link rel="stylesheet" type="text/css" href="~/Content/detailCss/list.css">
    <link rel="stylesheet" type="text/css" href="~/Content/detailCss/detail.css?v=1">
</head>
<body>
    <input type="hidden" value="@Model.PKID" id="ArticleId" />
    <div style="margin:0 auto;" class="maxwidth">
        <div id="userInfo"></div>
        <section class='section boxContent'>
            @if (Model.CoverMode != CoverMode.NoPicMode.ToString() && !string.IsNullOrEmpty(Model.CoverImage))
            {
                <div class="imgBox banner">
                    <img src="@Model.CoverImage" alt="@Model.SmallTitle">
                    <div class="bannerCover"><img src="/Content/images/cover.png"></div>
                    <p class="content title">@Model.SmallTitle</p>
                </div>
            }
            else
            {
                <div class="imgBox theme">@Model.SmallTitle</div>
            }
            <div class='floor1 de-floor0'>
                <div>
                    <span class='maoqiu'><span id="author" class="aucolor">@Model.CoverTag&nbsp;&nbsp;</span><span>@Model.CreateDateTime.ToString("MM-dd HH:mm")</span></span>
                </div>
                <div class='de-page'>
                    @Html.Raw(Model.ContentHtml)
                </div>
                <div class='de-tag warp pageCategories' id="bq_list">
                    @if (ViewData["TagList"] != null)
                    {
                        foreach (var item in ViewData["TagList"] as List<Category>)
                        {
                            if (item.Disable)
                            {
                                <span class='tag-item' data-itemId="@item.Id">@item.Name</span>
                            }
                        }
                    }
                </div>
            </div>
        </section>

        <!--相关阅读-->
        <section class="section" id="xgyd">
            <div class="floor1">
                <h6 class="de-title"><a href="" class="de-active">相关阅读</a></h6>
            </div>
            <div class="floor1 relateds" aid="12603" href="/ArticleManage/ArticleDetail?Id=12603&amp;bgColor=%2523ffffff&amp;textColor=%2523333333&amp;utm_source=COPY">
                <dl class="content dl-content">
                    <dd class="dl-right"><img src="https://image.tuhu.cn/activity/image/9b03dd7d-77ae-4ffb-8581-8ab24bc86b42$620w_344h.jpg"></dd>
                    <dt class="dl-left ptop10">
                        <div class="dt-top"><h5 class="shenglu">烧机油危害多！看懂准确判断爱车是否会烧机油</h5></div><span class="maoqiu"></span>
                    </dt>
                </dl>
            </div>
            <div class="floor1 relateds" aid="8642" href="/ArticleManage/ArticleDetail?Id=8642&amp;bgColor=%2523ffffff&amp;textColor=%2523333333&amp;utm_source=COPY">
                <dl class="content dl-content">
                    <dd class="dl-right"><img src="https://image.tuhu.cn/activity/image/4089c598-f5f5-4889-b4cf-392b8bb5f555$640w_320h.jpg"></dd>
                    <dt class="dl-left ptop10">
                        <div class="dt-top"><h5 class="shenglu">【高品质性价比】选择途虎喷漆的5大理由</h5></div><span class="maoqiu"></span>
                    </dt>
                </dl>
            </div>
            <div class="floor1 relateds" aid="8356" href="/ArticleManage/ArticleDetail?Id=8356&amp;bgColor=%2523ffffff&amp;textColor=%2523333333&amp;utm_source=COPY">
                <dl class="content dl-content">
                    <dd class="dl-right"><img src="https://image.tuhu.cn/activity/image/4fa32b19-a6f4-4e45-9774-105955c621e5$549w_274h.jpg"></dd>
                    <dt class="dl-left ptop10">
                        <div class="dt-top"><h5 class="shenglu">打造【配色单】中不存在的汽车，我们做到了！</h5></div><span class="maoqiu"></span>
                    </dt>
                </dl>
            </div>
            <div class="floor1 relateds" aid="7998" href="/ArticleManage/ArticleDetail?Id=7998&amp;bgColor=%2523ffffff&amp;textColor=%2523333333&amp;utm_source=COPY">
                <dl class="content dl-content">
                    <dd class="dl-right"><img src="https://image.tuhu.cn/activity/image/25319efb-5c87-4357-a1ea-810888bac440$587w_293h.png"></dd>
                    <dt class="dl-left ptop10">
                        <div class="dt-top"><h5 class="shenglu">200万“报废”豪车停在路边， 土豪们的世界就是不...</h5></div><span class="maoqiu"></span>
                    </dt>
                </dl>
            </div>
            <div class="floor1 relateds foot-top" aid="7363" href="/ArticleManage/ArticleDetail?Id=7363&amp;bgColor=%2523ffffff&amp;textColor=%2523333333&amp;utm_source=COPY" style="margin-bottom: 3px;">
                <dl class="content dl-content">
                    <dd class="dl-right"><img src="https://image.tuhu.cn/activity/image/918fedd8-d077-488c-bdce-23c1c9e4952f$550w_275h.jpg"></dd>
                    <dt class="dl-left ptop10">
                        <div class="dt-top"><h5 class="shenglu">关于汽车贴膜必需知道的几件事！</h5></div><span class="maoqiu"></span>
                    </dt>
                </dl>
            </div>
        </section>
        <footer class='footer maxwidth' style="display:none">
            <span><img src="~/Content/imgs/detail/drawable-hdpi/favor.png" id="favoriate" style="width:19px;height:19px;display:inline;"></span>
            <span><img src="~/Content/imgs/detail/drawable-hdpi/share.png" id="shareImage" style="width:19px;height:19px;display:inline;"></span>
        </footer>
    </div>

    <div class="dialog" id="dialog">
        <div class="dialog-bg"></div>
        <div class="content  swiper-container">
            <div class="img-list" id="imgList">
                <ul class="swiper-wrapper"></ul>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="https://file.tuhu.cn/activity/scripts/swiper.min.js" type="text/javascript"></script>
    <script src="https://resource.tuhu.cn/Js/WebViewJavascriptBridge.js" type="text/javascript"></script>
    <script src="https://file.tuhu.cn/activity/scripts/jsonSerialization.js" type="text/javascript"></script>   
    <script src="~/Scripts/CommentFile/ArticleProductRedirect.js"></script>
    @*<script src="~/Scripts/CommentFile/DeepShare.js"></script>*@
    <!--http://resource.tuhu.cn/Scripts/deepShare.js-->
    <script type="text/javascript">

        $(document).ready(function () {
            var list = $("#secRelated").children(".floor1");
            if (list.length > 1) {
                list.last().addClass("foot-top");
            }
            $(".relateds").each(function () {
                $(this).click(function () {
                    window.location.href = $(this).attr("href");
                });
            });
           

        });

    </script>
</body>
</html>
