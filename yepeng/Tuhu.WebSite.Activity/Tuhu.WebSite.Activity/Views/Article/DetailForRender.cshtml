@{
    Layout = null;
}
@using Tuhu.WebSite.Component.Discovery.BusinessData;
@model Article
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>@Model.SmallTitle</title>
    <link href="http://resource.tuhu.cn/css/activity/detailcss/detail.min.css?v=2" rel="stylesheet" />
    <link href="http://resource.tuhu.cn/css/activity/detailcss/list.min.css?v=2" rel="stylesheet" />
    <style>
        .typeoption table{
            width:100%;
        }
        .typeoption caption{
            background-color: #E5EDF2;
            border: 1px solid #C2D5E3;
            border-left: none;
            border-right: none;
        }
        .typeoption td ,.typeoption th{
            border: 1px solid #C2D5E3;
            border-left: none;
            border-right: none;
            border-top:none;
            text-align:center;

        }
    </style>
</head>
<body>
    <div style="margin:0 auto;" class="maxwidth">
        <div id="userInfo"></div>
        <section class='section boxContent'>
            @if (!string.IsNullOrEmpty(Model.CoverImage))
            {
                <div class="imgBox banner">
                    <img src="@Model.CoverImage" alt="@Model.SmallTitle">
                    <div class="bannerCover"><img src="/Content/images/cover.png"></div>
                    <p class="content title">@Model.SmallTitle</p>
                </div>
            }
            else
            {
                <div class="imgBox theme">@Model.SmallTitle</div>
            }
            <div class='floor1 de-floor0'>
                <div>
                    <span class='maoqiu'><span>@Model.PublishDateTime.Value.ToString("MM-dd HH:mm")</span></span>
                </div>
                <div class='de-page'>
                    @Html.Raw(Model.Content)
                </div>
            </div>
        </section>
    </div>
    <!--点击图片查看大图-->
    <div class="dialog" id="dialog">
        <div class="dialog-bg"></div>
        <div class="content  swiper-container">
            <div class="img-list" id="imgList">
                <ul class="swiper-wrapper"></ul>
            </div>
        </div>
    </div>
