
@{
    ViewBag.Title = "小程序首页配置";
    Layout = "~/Views/Shared/_Index.cshtml";
}

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a class="btn btn-primary" onclick="betn_searchlog()">
                <span class="fa fa-search">查看日志</span>
            </a>
        </div>

        <div class="btn-group">
            <a id="NF-add" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新增模块</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
            
                <li><a id="NF-edit" authorize="yes" onclick="btn_update()"><i class="fa fa-pencil-square-o"></i>修改模块</a></li>
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除模块</a></li>
                <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看模块</a></li>

             

            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
</div>

<script type="text/javascript">

    function gridList() {
        var $gridList = $('#gridList');
        $gridList.dataGrid({
            height: $(window).height() - 88,
            url: '/WechatHome/GetHomePageConfigList',
            colModel: [
                { label: "ID", name: "ID", width: 120, align: "center" },
                { label: "配置名称", name: "Name", width: 260, align: 'left' }                
            ],
            viewrecords: true
        });
    }

    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增首页配置",
            url: "/WechatHome/HomePageConfigEdit",
            width: "500px",
            height: "400px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });

        return;
        $('.menuItem', self.parent.document).each(function (e) {
            var id = $(this).data("id");
            var menuName = $(this).html();
            var dataUrl = $(this).attr("href");
            var dataId = id;
            if (id == "252229DB-35CA-47AE-BDAE-C9903ED5BA7v") {
                var str = '<a href="javascript:;" class="active menuTab" data-id="' + dataUrl + '">' + menuName + ' <i class="fa fa-remove"></i></a>';
                $('.menuTab', self.parent.document).removeClass('active');
                var str1 = '<iframe class="NFine_iframe" id="iframe' + dataId + '" name="iframe' + dataId + '"  width="100%" height="100%" src="' + dataUrl + '" frameborder="0" data-id="' + dataUrl + '" seamless></iframe>';
                $('.mainContent', self.parent.document).find('iframe.NFine_iframe').hide();
                $('.mainContent', self.parent.document).append(str1);
                $.loading(true);
                $('.mainContent iframe:visible', self.parent.document).load(function () {
                    $.loading(false);
                });
                $('.menuTabs .page-tabs-content', self.parent.document).append(str);
                self.parent.$.nfinetab.scrollToTab($('.menuTab.active'));
            }
        });
    }

    function btn_update() {

        var keyValue = $("#gridList").jqGridRowValue().ID;
        $.modalOpen({
            id: "Form",
            title: "修改首页配置",
            url: "/WechatHome/HomePageConfigEdit?id=" + keyValue,
            width: "500px",
            height: "400px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    function btn_delete() {
        var keyValue = $("#gridList").jqGridRowValue().ID;
        if (keyValue) {
            $.deleteForm({
                url: "/WechatHome/DeleteHomePageConfig",
                param: { id: keyValue },
                success: function () {
                    self.parent.location.reload();
                }
            });
        }
    }

    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().ID;
        if (keyValue) {
            location.href = "/WechatHome/List?homepageconfigId=" + keyValue;
        }
    }

    function betn_searchlog() {
        $.modalOpen({
            id: "Form",
            title: "查看日志",
            url: "/Logger/ListLoger?objectType=WHPLoger",
            width: "1500px",
            height: "600px",
            btn: null
        });
    }

   
    function btn_copy() {
        var keyValue = $("#gridList").jqGridRowValue().ID;
        $.confirmForm({
            prompt: "您确定复制这个模块吗?",
            loading:"处理中......",
            title: "复制模块",
            url: "/WechatHome/SaveWechatHomeCopy?id=" + keyValue,
            success: function (iframeId) {
                self.parent.location.reload();
            }
        });
    }

    $(function () {
        gridList();
    })
</script>

