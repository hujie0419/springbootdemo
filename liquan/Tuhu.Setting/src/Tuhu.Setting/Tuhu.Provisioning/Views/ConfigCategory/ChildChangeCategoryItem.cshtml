<div>
    <input type="hidden" id="PKID" value="@Model.PKID" />
    <input type="hidden" id="ParentCategoryID" value="@Model.ParentCategoryID" />
    <input type="hidden" id="CategoryLevel" value="@Model.CategoryLevel" />
    <input type="hidden" id="CategoryType" value="@Model.CategoryType" />
    <input type="hidden" id="LastUpdateTime" value="@Model.UpdatedTime" />
    <input type="hidden" id="CreateTime" value="@Model.CreatedTime" />
</div>
<div style="text-align:center; width:100%;height:100%;margin:0px; ">
    <a class="button1" href="javascript:;" style="margin-bottom: 20px; float:none" onclick="savecategory()">保存</a>
</div>
<script type="text/javascript">
    function savecategory() {
        var categoryName = $("#CategoryName").val();
        var sort = $("#Sort").val();
        var subTitle = $("#SubTitle").val();
        var showNum = $("#ShowNum").val();
        var flag = false;
        if (categoryName == '' ) {
            $("#CategoryNameValid").val("必填");
            $("#CategoryNameValid").show();
            flag = true;
        }
        if (subTitle == '') {
            $("#SubTitleValid").val("必填");
            $("#SubTitleValid").show();
            flag = true;
        }
        if (sort == '') {
            $("#SortValid").val("必填");
            $("#SortValid").show();
            flag = true;
        }
        if (isNaN(sort)) {
            $("#SortValid").val("必须是大于0的整数");
            $("#SortValid").show();
            flag = true;
        }
        var zhengze = /^[0-9]*[1-9][0-9]*$/;
        if (!(zhengze.test(sort))) {
            $("#SortValid").val("必须是大于0的整数");
            $("#SortValid").show();
            flag = true;
        }
        if (showNum == '') {
            $("#ShowNumValid").val("必填");
            $("#ShowNumValid").show();
            flag = true;
        }
        if (isNaN(showNum)) {
            $("#ShowNumValid").val("必须是大于0的整数");
            $("#ShowNumValid").show();
            flag = true;
        }
        if (!(zhengze.test(showNum))) {
            $("#ShowNumValid").val("必须是大于0的整数");
            $("#ShowNumValid").show();
            flag = true;
        }
        if (flag)
            return;
        $("#CategoryNameValid").hide();
        $("#SortValid").hide();

        if (confirm("是否确认要保存？")) {
            var pkid = $("#PKID").val();
            if (pkid == "0" || pkid =="") {
                $.post("/ConfigCategory/InsertChildCategoryItem", {
                    categoryName: $("#CategoryName").val(), parentCategoryID: $("#ParentCategoryID").val(), subTitle: $("#SubTitle").val(),
                    showNum: $("#ShowNum").val(), sort: $("#Sort").val(), isShow: $("input[type='radio']:checked").val()
                }, function (data) {

                    if (JSON.parse(data) === true) {
                        alert("保存成功！");
                        window.location.href = "/ConfigCategory/ChangeCategoryList";

                    } else {
                        alert("保存失败！");
                    }
                });
            } else {
                $.post("/ConfigCategory/UpdateChildCategoryItem", {
                    pkid: pkid, categoryName: $("#CategoryName").val(), parentCategoryID: $("#ParentCategoryID").val(),
                    subTitle: $("#SubTitle").val(), sort: $("#Sort").val(), isShow: $("input[type='radio']:checked").val(), showNum: $("#ShowNum").val()
                }, function (data) {

                    if (JSON.parse(data) === true) {
                        alert("保存成功！");
                        window.location.href = "/ConfigCategory/ChangeCategoryList";

                    } else {
                        alert("保存失败！");
                    }
                });
            }
        }
    }

</script>
