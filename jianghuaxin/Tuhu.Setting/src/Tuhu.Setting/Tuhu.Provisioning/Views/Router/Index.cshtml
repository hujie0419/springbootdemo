<style type="text/css">
    label{
        padding-top: 7px;
    }
    .inmodal .modal-header {
        padding: 0;
        color: #fff;
        background-color: #1c84c6;
        text-align: left;
    }
    .inmodal .modal-title {
        font-size: 15px;
        height: 40px;
        line-height: 40px;
        padding-left: 20px;}

    .inmodal .modal-body span{
        margin-bottom: 10px;
        display: inline-block;
