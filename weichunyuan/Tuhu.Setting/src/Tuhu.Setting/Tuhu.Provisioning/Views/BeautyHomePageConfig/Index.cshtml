@using Tuhu.Provisioning.DataAccess.Entity;
@{
    ViewBag.Title = "美容首页";
    //List<Region> provincelist = ViewBag.ProvinceList as List<Region>;
}
<h2 id="title1">美容首页</h2>
<style>
    body {
        font-family: "Microsoft Yahei";
    }

    textarea {
        width: 100px;
        height: 100px;
    }

    .btn {
        margin-top: 20px;
        padding: 5px 25px;
        border: none;
        color: #F0F0F0;
        font-size: 12px;
        outline: none;
        cursor: pointer;
        background: cornflowerblue;
        border-color: cornflowerblue;
    }

    table th {
        color: white;
        padding: 6px 5px;
        text-align: left;
        background-color: cornflowerblue;
        border: solid 1px cornflowerblue;
    }
</style>

<div>
    <table>
        <tbody>
            <tr>
                <td>
                    <a href="javascript:void(0)" class="btn" onclick="Add(0)">添加</a>
                </td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>


<div class="listdata"></div>

<script>

    function GetQueryString(name) {
        var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");
        var r = window.location.search.substr(1).match(reg);
        if (r != null) return decodeURIComponent(r[2]); return null;
    }
    $(function () {

        if (GetQueryString("type") == "1") {
            $("#title1").text("团购美容项目配置");
        } else if (GetQueryString("type") == "2") {
            $("#title1").text("团购美容活动配置");
        }


        $(".listdata").load("/BeautyHomePageConfig/list?Type=" + GetQueryString("type"));

        $(".listdata").on("click", ".pager>a", function (event) {
            event.preventDefault();
            if ($(this).attr("href")) {
                $.ajax({
                    type: "POST",
                    url: this.href,
                    data: { "Type": GetQueryString("type") },
                    success: function (result) {
                        $(".listdata").html(result);
                    },
                    error: function (result) {
                        alert("失败!")
                    }
                });
            }
        });
    })

    function SearchList() {
        $.ajax({
            type: "POST",
            url: "/BeautyHomePageConfig/List",
            data: { "Type": GetQueryString("type") },
            success: function (result) {
                $(".listdata").html(result);
            },
            error: function (result) {
                alert("失败!")
            }
        });
    };

    function Add(id) {
        window.location.href = '/BeautyHomePageConfig/Edit?id=' + 0 + '&type=' + GetQueryString("type");
    };

    function Update(id) {
        window.location.href = '/BeautyHomePageConfig/Edit?id=' + id + '&type=' + GetQueryString("type");
    };

    function Delete(id) {
        if (window.confirm("您确定要删除吗？")) {
            $.ajax({
                type: "POST",
                url: "/BeautyHomePageConfig/Delete",
                data: { "id": id },
                dataType: "json",
                success: function (result) {
                    if (result) {
                        window.location.href = "/BeautyHomePageConfig/Index";
                    }
                    else {
                        alert("删除失败！");
                    }
                },
                error: function (result) {
                }
            })
        }
    }
</script>
