
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Index.cshtml";
}

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a class="btn btn-primary" onclick="betn_searchlog()">
                <span class="fa fa-search">查看日志</span>
            </a>
        </div>

        <div class="btn-group">
            <a id="NF-add" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>添加商品</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除记录</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>

<script type="text/javascript">
    //创建Grid
    function gridList() {
        var $gridList = $('#gridList');
        $gridList.dataGrid({
            height: $(window).height() - 118,
            url: '/ShopDistribution/GetShopDistributionList',
            colModel: [
                { label: "PKID", name: "PKID", width: 10, align: "center", hidden: true },
                { label: "PID", name: "FKPID", width: 160, align: 'left' },
                { label: "商品标题", name: "DisplayName", width: 560, align: "left" },
                { label: "创建时间", name: "CreateTime", width: 180, align: "left", formatter: "date", formatoptions: { srcformat: 'Y-m-d H:i:s', newformat: 'Y-m-d H:i:s' } }
            ],
            viewrecords: true,
            pager: "#gridPager",
            sortname: "CreateTime desc",
            rowNum: 20,
            rowList: [10, 20, 30],
        });
    }
    //添加商品
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "添加商品",
            url: "/ShopDistribution/ListForm",
            width: "900px",
            height: "580px",
            callBack: function (iframeId) {
                var iframe = $.currentWindow();
                top.frames[iframeId].submitForm(iframe);
                setTimeout(function () {
                    $("#NF-addClick").trigger("click");
                }, 1000);
            }
        });
    }
    //删除商品
    function btn_delete() {
        var keyValue = $('#gridList').jqGridRowValue().PKID;
        if (keyValue) {
            $.deleteForm({
                url: "/ShopDistribution/DeleteForm",
                param: { pkid: keyValue },
                success: function () {
                    self.location.reload();
                }
            })
        }
    }
    //查询日志
    function betn_searchlog() {
        $.modalOpen({
            id: "Form",
            title: "查看日志",
            url: "/Logger/ListLoger?objectType=MDPHLoger",
            width: "1500px",
            height: "600px",
            btn: null
        });
    }
    //重新加载
    function btn_reload() {
        var startVersion = $("#gridList").jqGridRowValue().SVersion;
        var endVersion = $("#gridList").jqGridRowValue().EVersion;
        if (startVersion && endVersion) {
            var url = location.origin.replace("setting", "mdph") + '/wechatapp/ReloadWechatHomeNew?version=';
            window.open(url, "_bank")
        }
    }
    //初始加载
    $(function () {
        gridList();
    })
</script>
