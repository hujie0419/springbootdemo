@{
    ViewBag.Title = "提示条配置";
}

<h2>提示条配置</h2>
<style>
    .tableContainer > tbody > tr > td > a {
        word-wrap: break-word;
        word-break: normal;
        width: 150px;
        box-sizing: border-box;
        display: inline-block;
    }

    .btn-basic {
        font-weight: bold;
        width: 100px;
    }

    .disable {
        background: #ccc;
    }

    table > tbody > tr > td {
        padding: 0px 10px;
    }

    .dialog > table > tbody > tr > td {
        text-align: left;
        padding: 5px 10px;
    }

    fieldset {
        margin: 0px 10px 15px 0px;
        padding: 15px 20px;
        height: auto;
        width: 100%
    }

        fieldset > select {
            line-height: 1.42857143;
            width: 150px;
            height: 30px;
            padding: 2px 2px 2px 5px;
            color: #555;
            background-color: #fff;
            background-image: none;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
</style>
<link href="~/Scripts/kkpager/kkpager_blue.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/Public/Public.css" />


<div>
    <fieldset id="searchField">
        <select id="tipBannerType" onchange="Search(1)"></select>
        <button class="btn btn-basic" onclick="Search(1)">查询</button>
        <button class="btn btn-basic" onclick="Add()">添加</button>
        <button class="btn btn-basic" onclick="AddType()">添加新类型</button>
        <button class="btn btn-basic" onclick="RefreshCache()">刷新缓存</button>
    </fieldset>
    <div id="loadingData" style="display: none; width: 100%; text-align: center; border: 1px solid #eee; padding: 8px 0 8px 0">
        <img src="/Images/loading.gif" style="height: 16px" />
        <span style="vertical-align: top; margin-left: 5px;">正在光速加载中，请稍候！</span>
    </div>
    <div>
        <table class="tableContainer" id="showArea" style="display:none">
            <thead>
                <tr style="white-space: nowrap;">
                    <th>序号</th>
                    <th>ID</th>
                    <th>类型</th>
                    <th>状态</th>
                    <th>图标</th>
                    <th>标题</th>
                    <th>文字</th>
                    <th>链接</th>
                    <th>背景颜色</th>
                    <th>背景透明度值</th>
                    <th>文字颜色</th>
                    <th>添加时间</th>
                    <th>最近更新时间</th>
                    <th>操作</th>
                </tr>
            </thead>
        </table>
    </div>
    <table class="tableContainer" style="display:none" id="Template">
        <tr>
            <td style="white-space:nowrap;">$number$</td>
            <td style="white-space:nowrap;">$pkid$</td>
            <td style="white-space:nowrap;">$type$</td>
            <td style="white-space:nowrap;">$isEnabled$</td>
            <td style="white-space:nowrap;">$icon$</td>
            <td>$title$</td>
            <td>$content$</td>
            <td>$url$</td>
            <td style="white-space:nowrap;">$backgroundColor$</td>
            <td style="white-space:nowrap;">$bgTransparent$</td>
            <td style="white-space:nowrap;">$contentColor$</td>
            <td style="white-space:nowrap;">$createDateTime$</td>
            <td style="white-space:nowrap;">$lastUpdateDateTime$</td>
            <td style="white-space: nowrap;">$operate$</td>
        </tr>
    </table>
</div>
<div id="noData" style="display: none; width: 100%; text-align: center; border: 1px solid #eee; padding: 8px 0 8px 0">
    <span style="vertical-align: top; margin-left: 5px; font-weight: bolder">无数据！</span>
</div>
<div style="display:none;" class="dialog" id="dialog-addoredit" title="">
    <table>
        <tr>
            <th><label style="color:red">*</label>类型：</th>
            <td>
                <select name="tipBannerType"></select>
            </td>
        </tr>
        <tr>
            <th><label style="color:red">*</label>状态:</th>
            <td>
                <label><input type="radio" name="isEnabled" value=true />启用</label>
                <label><input type="radio" name="isEnabled" value=false />禁用</label>
            </td>
        </tr>
        <tr>
            <th>图标:</th>
            <td>
                <div>
                    <img style="height:40px;margin-left:10px;" class="vwPicture" />
                    <form method="post" action="" enctype="multipart/form-data">
                        <input type="file" onchange="UploadImg(this)" id="2" name="upImgUrl" />  h:15px
                    </form>
                </div>
                <input style="width:95%;" name="icon" class="image" value="" />
            </td>
        </tr>
        <tr>
            <th>
                标题:
            </th>
            <td>
                <input style="width:95%;" name="title" />
            </td>
        </tr>
        <tr>
            <th>
                <label style="color:red">*</label>
                文字:
            </th>
            <td>
                <textarea style="width:95%;" rows="2" cols="40" name="content"></textarea>
            </td>
        </tr>
        <tr>
            <th>链接:</th>
            <td>
                <input style="width:95%;" name="url" />
            </td>
        </tr>
        <tr>
            <th><label style="color:red">*</label>背景颜色:</th>
            <td>
                <input class="jscolor {hash:true}" name="backgroundColor" />
            </td>
        </tr>
        <tr>
            <th><label style="color:red">*</label>背景透明度值:</th>
            <td>
                <input type="text" name="bgTransparent" />  (0~1)
            </td>
        </tr>
        <tr>
            <th style="white-space: nowrap;"><label style="color:red">*</label>文字颜色:</th>
            <td>
                <input class="jscolor {hash:true}" name="contentColor" />
            </td>
        </tr>
    </table>
</div>

<div id="kkpager" colspan="8"></div>
<script src="~/Scripts/kkpager/kkpager.min.js"></script>
<script src="~/Scripts/ajaxfileupload.js" type="text/javascript"></script>
<script src="~/Scripts/TipBannerConfig/TipBannerConfig.js"></script>
<script src="~/Scripts/TipBannerConfig/jscolor.min.js"></script>

