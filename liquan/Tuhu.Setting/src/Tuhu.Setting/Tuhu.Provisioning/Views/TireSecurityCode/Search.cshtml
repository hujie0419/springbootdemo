@using Tuhu.Provisioning.DataAccess.Entity.TireSecurityCode
@model List<TireSecurityCodeConfig>
@{
    ViewBag.Title = "防伪码管理系统";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head{
    <link href="~/Content/nfine/js/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <style>
        .title {
            float: left;
        }

        .content {
            clear: both;
        }

        .condition .name {
            font-size: 16px;
            font-weight: bold;
        }

        .condition .searchWord {
            font-size: 12px;
        }

        .condition > div {
            margin-bottom: 10px;
        }
    </style>
}
<div class="title">
    <h2>轮胎防伪码管理系统</h2>
</div>
<div class="content">
    <div class="condition">
        <div>
            <span class="name">筛选条件：</span>
        </div>
        <div>
            <span class="searchWord">防伪码：</span>
            <input id="InputSecurityCode" type="text" name="SecurityCode" value="" />
        </div>
        <div>
            <span class="searchWord">u&f码：</span>
            <label>u&nbsp;</label><input id="InputUCode" type="text" name="UCode" value="" />
            <label>&nbsp;f&nbsp;</label><input id="InputFCode" type="text" name="FCode" value="" />
        </div>
        <div>
            <span class="searchWord">条形码：</span>
            <input id="InputBarCode" type="text" name="BarCode" value="" />
        </div>
        <div>
            <span class="searchWord">Guid：</span>
            <input id="InputGuid" type="text" name="Guid" value="" />
        </div>
        <div>
            <button type="button" class="btn btn-primary btn-small" onclick="CheckToSubmit(1)">查询</button>
            <button type="button" class="btn btn-primary btn-small" onclick="ClearInput()">清空</button>
        </div>
        <div>
            每页显示：
            <select id="PageDataQuantity" onchange="CheckToSubmit(1)">
                <option value="10" selected="selected">10</option>
                <option value="20">20</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select> 条&nbsp;&nbsp;
            <span id="DataCountInfo"></span>
            &nbsp;&nbsp;
            <a href="/TireSecurityCode/UploadSecurityCodeLog" target="_blank">上传防伪码</a>
            &nbsp;&nbsp;
            <a href="/TireSecurityCode/UploadBarCodeLog" target="_blank">上传标签数据</a>
        </div>
    </div>
</div>
<div class="contact" id="ForTableTireSecurityCodeConfig" style="margin:10px 0 10px 0;">
    <!--输出表格-->
</div>

<script src="/Scripts/ajaxfileupload.js" type="text/javascript"></script>
<script type="text/javascript" src="/Scripts/TimeObjectUtil.js"></script>
<link href="/Scripts/jquery-ui-timepicker-addon/jquery-ui-timepicker-addon.css" rel="stylesheet" type="text/css" />
<link href="/Scripts/ztree/css/zTreeStyle/zTreeStyle.css" rel="stylesheet" type="text/css" />
<script src="/Scripts/jquery-ui-timepicker-addon/jquery-ui-sliderAccess.js" type="text/javascript"></script>
<script src="/Scripts/jquery-ui-timepicker-addon/jquery-ui-timepicker-addon.js" type="text/javascript"></script>
<script src="/Scripts/zTree/js/jquery.ztree.core-3.5.min.js" type="text/javascript"></script>
<script src="/Scripts/zTree/js/jquery.ztree.excheck-3.5.min.js" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#ForTableTireSecurityCodeConfig").on("click", ".pager>a", function (event) {
            event.preventDefault();
            var url = $(this).attr("href");
            if (url) {
                $.post(url, function (html, status) {
                    if (status === "success") {
                        $("#ForTableTireSecurityCodeConfig").html(html);
                    }
                });
            }
        });
        CheckToSubmit(1);
    }
    );
    function CheckToSubmit(index) {
        var securityCode = $("#InputSecurityCode").val();
        var uCode = $("#InputUCode").val();
        var fCode = $("#InputFCode").val();
        var barCode = $("#InputBarCode").val();
        var guid = $("#InputGuid").val();
        var pagedataquantity = $("#PageDataQuantity").val();
        var pageIndex = index;

        $.post("/TireSecurityCode/SearchList", {
            SecurityCodeCriterion: securityCode,
            UCodeCriterion: uCode,
            FCodeCriterion: fCode,
            BarCodeCriterion: barCode,
            GuidCriterion: guid,
            PageIndex: pageIndex,
            PageDataQuantity: pagedataquantity
        }, function (html, status) {
            if (status === "success") {
                $("#ForTableTireSecurityCodeConfig").html(html);
            }
        });
    }
    function ClearInput() {
        window.location.reload();
    }
</script>

