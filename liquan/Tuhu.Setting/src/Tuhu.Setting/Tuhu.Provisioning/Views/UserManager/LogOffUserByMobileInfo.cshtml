@model Tuhu.Service.UserAccount.Models.User
@{
    Layout = null;
}

<table id="TbLogOffUserInfo" style="background: #ffffff; font-size: 12px; width: 100%; text-align: center" border="1" class="table">
    <tr>
        <th style="text-align: center">UserId</th>
        <th style="text-align: center">手机号</th>
        <th style="text-align: center">昵称</th>
        <th style="text-align: center">手机是否认证</th>
        <th style="text-align: center">IsActive</th>
        <th style="text-align: center">操作</th>
    </tr>
    @if (Model.UserId != Guid.Empty)
    {
        <tr>
            <td style="text-align: center">@Model.UserId.ToString()</td>
            <td style="text-align: center">@Model.MobileNumber</td>
            <td style="text-align: center">@((Model.Profile == null) ? "" : Model.Profile.UserName)</td>
            <td style="text-align: center">@((Model.IsMobileVerified == null) ? "否" : (Model.IsMobileVerified == true) ? "是" : "否")</td>
            <td style="text-align: center">@((Model.IsActive == true) ? "是" : "否")</td>
            <td><button class="btn btn-primary btn-small" onclick="LogOffUser('@Model.UserId.ToString()')">注销</button></td>
        </tr>
    }
</table>

