
@{
    ViewBag.Title = "MessageNavigationConfig";
}


@section head{
    <script src="~/Content/nfine/js/jquery/jquery-2.1.1.js"></script>

    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>


}
<div class="content" id="typeconfig">

    <div class="form-group">
        <h2>
            导航栏标题配置
        </h2>
    </div>
    <div class="form-group">
        <h4>
            <a v-on:click="AddTypeConfig" href="javascript:void(0)">新增</a>
        </h4>
    </div>
    <div class="form-inline">
        <div>
            <table class="table">
                <tr>
                    <th>分类编号</th>
                    <th>分类名称</th>
                    <th>分类排序</th>
                    <th>推送标签</th>
                    <th>操作</th>
                </tr>
                <tr v-for="item in NavigationConfigs">
                    <td>
                        {{item.PkId}}
                    </td>
                    <td>
                        {{item.NavigationName}}
                    </td>
                    <td>
                        {{item.Order}}
                    </td>
                    <td>
                        {{item.PushAlias}}
                    </td>
                    <td>
                        <a href="javascript:void(0)" v-on:click="DoEditItem(item)">编辑</a>
                    </td>
                    @*<td>
                        <a href="javascript:void(0)" v-on:click="DoDeleteItem(item)">删除</a>
                    </td>*@
                </tr>

            </table>
        </div>
    </div>
    <div style="display:none;width:auto" id="EditConfig">

        <div>

            <div class="modal-body form-horizontal">


                <div class="form-group">
                    <label class="col-sm-3 control-label" for="aCategoryName">分类编号</label>
                    <div class="col-sm-8">
                        <input disabled="disabled" type="number" v-model="EditConfig.PkId" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label" for="aCategoryName">列表导航名称</label>
                    <div class="col-sm-8">
                        <input required type="text" v-model="EditConfig.NavigationName" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label" for="aCategoryName">顶部导航名称</label>
                    <div class="col-sm-8">
                        <input required type="text" v-model="EditConfig.TopNavigationName" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label" for="aCategoryName">推送标签</label>
                    <div class="col-sm-8">
                        <input required :disabled="DisableAlias" type="text"  v-model="EditConfig.PushAlias" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label" for="aCategoryName">描述</label>
                    <div class="col-sm-8">
                        <input type="text" v-model="EditConfig.Desctiption" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label" for="aCategoryName">排序</label>
                    <div class="col-sm-8">
                        <input type="number" v-model="EditConfig.Order" />
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>



<script src="https://res.tuhu.org/lib/vuejs/vue.min.js?v=20160704" type="text/javascript"></script>
<script src="https://res.tuhu.org/lib/require/require.min.js" type="text/javascript"></script>

<script src="~/Scripts/Push/NavigationConfig.js"></script> 