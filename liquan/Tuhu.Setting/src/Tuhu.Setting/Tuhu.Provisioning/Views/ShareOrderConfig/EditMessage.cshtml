@model Tuhu.Provisioning.DataAccess.Entity.OrderSharedPushMessageConfig
@{
    Layout = null;
}

<style>
    .btn {
        margin-top: 20px;
        padding: 5px 25px;
        border: none;
        color: #F0F0F0;
        font-size: 12px;
        outline: none;
        cursor: pointer;
        background: cornflowerblue;
        border-color: cornflowerblue;
    }

    a {
        color: cornflowerblue;
    }

    input[type='text'] {
        width: 350px;
    }
</style>
<script src="../../Scripts/ajaxfileupload.js" type="text/javascript"></script>

<form action="/ShareOrderConfig/EditMessage" method="post">
    <input type="hidden" value="@Model.Id" id="Id" name="Id" />
    <div>
        <table>
            <tr>
                <td style="width:30%">消息分类</td>
                <td style="width:70%">
                    <select name="Type" id="Type">
                        @if (Model.Type == "system")
                        {
                            <option value="system" selected="selected">系统消息</option>
                            <option value="activity">优惠活动</option>
                        }
                        else if (Model.Type == "activity")
                        {
                            <option value="system">系统消息</option>
                            <option value="activity" selected="selected">优惠活动</option>
                        }
                        else
                        {
                            <option value="system">系统消息</option>
                            <option value="activity">优惠活动</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td>消息标题</td>
                <td>
                    <input type="text" value="@Model.MessageTilte" style="width:350px;" name="MessageTilte" />
                </td>
            </tr>
            <tr>
                <td>消息内容</td>
                <td>
                    <textarea id="MessageContent" name="MessageContent"  style="width:350px;">@Model.MessageContent</textarea>
                </td>
            </tr>
            <tr>
                <td>推送标题</td>
                <td>
                    <input type="text" value="@Model.PushTitile" style="width:350px;" name="PushTitile" />
                </td>
            </tr>
            <tr>
                <td>推送内容</td>
                <td>
                    <textarea name="PushContent" id="PushContent" style="width:350px;">@Model.PushContent</textarea>
                </td>
            </tr>
            <tr>
                <td>Android</td>
                <td>IOS</td>
            </tr>
            <tr>
                <td>
                    后续动作:
                    @Html.RadioButtonFor(m => m.AndriodModel.AfterOpen, "GoApp")打开应用
                    @Html.RadioButtonFor(m => m.AndriodModel.AfterOpen, "GoActivity")打开指定的页面（Activity）

                    <input type="text" value="@Model.AndriodModel.AppActivity" name="AppActivity" id="AppActivity" placeholder="请填写完整的包名或activity名称，如com.umeng.MainActivity" />
                </td>
                <td>
                    @if (Model.IOSModel.ShowBadge == true)
                    {
                        <input type="checkbox" name="ShowBadge" checked="checked" /> <label>显示角标</label>
                    }
                    else
                    {   <input type="checkbox" name="ShowBadge" /><label>显示角标</label>
                    }

                </td>
            </tr>

            <tr>
                <td>
                    自定义参数：<br />
                    key：<input type="text" id="ExKey1" value="@Model.AndriodModel.ExKey1">
                    value:<input type="text" id="ExValue1" value="@Model.AndriodModel.ExValue1">
                    key：<input type="text" id="ExKey2" value="@Model.AndriodModel.ExKey2">
                    value:<input type="text" id="ExValue2" value="@Model.AndriodModel.ExValue2">
                </td>
                <td>
                    自定义参数：<br />
                    key：<input type="text" name="ExKey1" value="@Model.IOSModel.ExKey1" />
                    value:<input type="text" name="ExValue1" value="@Model.IOSModel.ExValue1">
                    key：<input type="text" name="ExKey2" value="@Model.IOSModel.ExKey2">
                    value:<input type="text" name="ExValue2" value="@Model.IOSModel.ExValue2">
                    key：<input type="text" name="ExKey3" value="@Model.IOSModel.ExKey3">
                    value:<input type="text" name="ExValue3" value="@Model.IOSModel.ExValue3">

                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="button" value="保存" class="btn" onclick="saveModel()" /></td>
            </tr>
        </table>

    </div>
</form>
<script>
    function saveModel() {
        var dataStr = {
            "Id": $("input[name='Id']").val(),
            "Type": $("#Type").val(),
            "MessageTilte": $("input[name='MessageTilte']").val(),
            "MessageContent": $("#MessageContent").val(),
            "PushTitile": $("input[name='PushTitile']").val(),
            "PushContent": $("#PushContent").val()
        }
        var andriod = {
            //"Open": $("input[name='AndriodModel.AfterOpen']:checked").val(),
            "AfterOpen": $("input:[name='AndriodModel.AfterOpen']:checked").val(),
            "AppActivity": $("input[name='AppActivity']").val(),
            "ExKey1": $("#ExKey1").val(),
            "ExValue1": $("#ExValue1").val(),
            "ExKey2": $("#ExKey2").val(),
            "ExValue2": $("#ExValue2").val(),
        }

        var showBadge = true;
        if ($("input[name='ShowBadge']").attr("checked") == "checked") {
            showBadge = true;
        } else {
            showBadge = false;
        }
        var ios = {
            "ShowBadge": showBadge,
            "ExKey1": $("input[name='ExKey1']").val(),
            "ExValue1": $("input[name='ExValue1']").val(),
            "ExKey2": $("input[name='ExKey2']").val(),
            "ExValue2": $("input[name='ExValue2']").val(),
            "ExKey3": $("input[name='ExKey3']").val(),
            "ExValue3": $("input[name='ExValue3']").val(),
        }      
   
        $.ajax({
            type: "POST",
            url: "/ShareOrderConfig/SaveMessage",
            data: { "data": JSON.stringify(dataStr), "andriod": JSON.stringify(andriod), "ios": JSON.stringify(ios) },
            success: function (result) {
                window.location.href = "/ShareOrderConfig/PushMessage";
            },
            error: function (result) {
                alert("失败!")
            }
        });

        //$.ajax({
        //    method: "POST",
        //    url: "/ShareOrderConfig/SaveMessage",
        //    data: { "model": dataStr, "andriod": andriod, "ios": ios },
        //    dataType: "json"
        //}).done(function (data) {
        //    window.location.href = "/ShareOrderConfig/PushMessage";
        //}).fail(function (data) {
        //    alert("fail");
        //    window.location.href = "/ShareOrderConfig/PushMessage";
        //})

    }
</script>
