@{
    ViewBag.Title = "蓄电池极速达服务后台配置";
}


<h2>蓄电池极速达服务后台配置</h2>
<link href="~/Scripts/kkpager/kkpager_blue.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/BatteryFastDelivery/BatteryFastDelivery.css" />
<link rel="stylesheet" href="~/Content/Public/Public.css" />

<div>
    <fieldset id="searchField">
        <select id="serviceTypePid">
            <option value="">-请选择极速达服务-</option>
        </select>
        <button type="button" class="btn btn-primary" id="search" onclick="Search(1)">查询</button>
        <button class="btn btn-add" onclick="Add()">新增</button>
    </fieldset>
    <div id="loadingData" style="display: none; width: 100%; text-align: center; border: 1px solid #eee; padding: 8px 0 8px 0">
        <img src="/Images/loading.gif" style="height: 16px" />
        <span style="vertical-align: top; margin-left: 5px;">正在光速加载中，请稍候！</span>
    </div>
    <div>
        <table class="tableContainer" id="showArea" style="display:none">
            <thead>
                <tr style="white-space: nowrap;">
                    <th>序号</th>
                    <th>省份</th>
                    <th>城市</th>
                    <th>区域</th>
                    <th>服务时间</th>
                    <th>适用产品</th>
                    <th>备注</th>
                    <th>操作</th>
                </tr>
            </thead>
        </table>
    </div>
    <table class="tableContainer" style="display:none" id="Template">
        <tr>
            <td style="white-space:nowrap;width:50px;">$number$</td>
            <td style="padding:5px 10px 5px 10px;width:80px;">$province$</td>
            <td style="padding:5px 10px 5px 10px;width:80px;">$city$</td>
            <td style="padding:5px 10px 5px 10px;width:80px;">$district$</td>
            <td style="white-space:nowrap;padding:5px 10px 5px 10px;width:90px;">$serviceTime$</td>
            <td style="text-align:left;padding:5px 3px 5px 10px;">$products$</td>
            <td style="width:150px;padding:5px 10px 5px 10px;">$remark$</td>
            <td style="white-space: nowrap;padding:5px 10px 5px 10px;">$operate$</td>
        </tr>
    </table>
</div>
<div id="noData" style="display: none; width: 100%; text-align: center; border: 1px solid #eee; padding: 8px 0 8px 0">
    <span style="vertical-align: top; margin-left: 5px; font-weight: bolder">无数据！</span>
</div>
<div style="display:none;" class="dialog" id="dialog-addoredit" title="">
    <table>
        <tr>
            <th>极速达服务：</th>
            <td>
                <select id="serviceTypePidDialog">
                    <option value="">-请选择极速达服务-</option>
                </select>
            </td>
        </tr>
        <tr>
            <th>城市:</th>
            <td class="region">
                <select id="province" onchange="CityList(this)" style="width:120px;">
                    <option value=-1>-请选择省份-</option>
                </select>

                <select id="city" onchange="DistrictList(this)" style="width:120px;">
                    <option value=-1>-请选择城市-</option>
                </select>

                <select id="district" style="width:120px;">
                    <option value=-1>-请选择地区-</option>
                </select>
            </td>
        </tr>
        <tr>
            <th>适用产品:</th>
            <td>
                <a href="javascript:void(0)" onclick="ChooseProduct()" style="float:left;margin-left:20px;">选择适配产品</a>
                <label id="selectedProducts" style="display:none"></label>
            </td>
        </tr>
        <tr>
            <th>
                服务时间:
            </th>
            <td>
                <input type="text" class="date-picker" id="startTime" name="startTime" style="display:inline;width:90px;" />
                <label>~</label>
                <input type="text" class="date-picker" id="endTime" name="endTime" style="display:inline;width:90px;" />
            </td>
        </tr>
        <tr>
            <th>备注:</th>
            <td>
                <textarea rows="2" cols="40" id="remark"></textarea>
            </td>
        </tr>
    </table>
</div>


<div style="display:none;" class="dialog" id="dialog-products" title=""></div>
<div id="kkpager" colspan="8"></div>
<script src="~/Scripts/kkpager/kkpager.min.js"></script>
<script src="~/Scripts/BatteryFastDelivery/BatteryFastDelivery.js"></script>
<script src="~/Scripts/jquery-ui-timepicker-addon/jquery-ui-timepicker-addon.js" type="text/javascript"></script>
<script type="text/javascript">
    (function ($) {
        $.timepicker.regional['zh-CN'] = {
            timeOnlyTitle: '选择时间',
            timeText: '时间',
            hourText: '时',
            minuteText: '分',
            secondText: '秒',
            timezoneText: '时区',
            currentText: '现在时间',
            closeText: '关闭',
            timeFormat: 'HH:mm',
            amNames: ['AM', 'A'],
            pmNames: ['PM', 'P'],
            isRTL: false
        };
