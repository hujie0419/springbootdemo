@using Tuhu.Service.Member.Models
@{
    ViewBag.Title = "会员特权配置";
    Layout = "~/Views/Shared/_PersonalCenterLeft.cshtml";
    var MemebershipsGrade = ViewBag.MemberGrade as List<MembershipsGradeResponse>;
}
<script src="~/Scripts/jquery-2.1.1.min.js"></script>
<link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
<script src="~/Scripts/layui/layui.js"></script>
<script src="~/Scripts/common/setting.base.js?v=1.2"></script>
<style type="text/css">
    .layui-btn {
        height: 30px;
        line-height: 30px;
        padding: 0 10px;
        font-size: 12px;
    }

    table, span, div, a {
        font-size: 12px;
    }

    .layui-table-cell, .layui-input {
        line-height: 20px;
        height: 30px;
        min-height: 20px;
    }
</style>
<span class="layui-breadcrumb" style="visibility: visible;">
    <a href="/">首页</a><span lay-separator="">/</span>
    <a href="/PersonalCenterFunctionConfig/Index">个人中心</a><span lay-separator="">/</span>
    <a><cite>会员特权配置</cite></a>
</span>

<div style="min-height:600px;" id="right-content">
    <!--编辑按钮-->
    <form class="layui-form">
        <div style="margin-top:10px;" class="layui-inline">
            <div class="layui-inline">
                <input type="tel" id="txtSearchName" lay-verify="required|phone" autocomplete="off" class="layui-input" style="width:200px;height:30px" placeholder="权益名称/支持模糊">
            </div>
            <div class="layui-input-inline" style="width:200px;height:30px">
                <select id="sel-memeberShipGradeId" style="width:200px;height:30px" lay-filter="memberGrade">
                    <option value="0">请选择会员等级</option>
                    @foreach (var mg in MemebershipsGrade)
                    {
                        <option value="@mg.PKID">@mg.GradeName</option>
                    }
                </select>
            </div>
            <div class="layui-inline">
                <button class="layui-btn layui-btn-normal" type="button" style="height:30px;font-size:12px;" data-type="reload" id="btn_serach">搜索</button>
                <button class="layui-btn layui-btn-normal" type="button" style="height:30px;font-size:12px;" id="btn_add">添加</button>
                <button class="layui-btn layui-btn-normal"  type="button" id="btn_modify">修改</button>
                <button class="layui-btn layui-btn-danger"  type="button" id="btn_delete">删除</button>
            </div>
        </div>
    </form>
    <div>
        <table class="layui-hide" id="tblData" lay-filter="test"></table>
    </div>
    <div style="font-weight:bold;margin-top:5px;">
        说明：App低于5.4.3版本的只展示2018-11-15日之前创建的数据，5.4.3及以上版本按版本号进行展示。
    </div>
</div>
<script src="~/Scripts/MembershipsCenter/MembershipsRights.js?v=1.4"></script>
<script type="text/javascript">
    $(function () {
        UserRights.DataInit();
        UserRights.init();
    });
</script>
