<div id="city" style="display: none;line-height:20px">
    @if (Model.CityList != null)
    {
        var cityLet = "";
        foreach (var city in Model.CityList)
        {
            if (cityLet == "" || cityLet != @city.Letter)
            {

                if (cityLet != "")
                {
                    <br /><br />
                }
                <label style="font-size:20px">@city.Letter.ToUpper()</label>
                if (@city.Selected)
                {
                    <span id="@(city.CityID)" data-cityid="@(city.CityID)" class="selected" style="background-color: #0088cc; margin-left: 10px;" onclick="spanclick('@(city.CityID)')">@city.City</span>
                }
                else
                {
                    <span id="@(city.CityID)" data-cityid="@(city.CityID)" style="margin-left: 10px;" onclick="spanclick('@(city.CityID)')">@city.City</span>
                }

            }
            else
            {

                if (@city.Selected)
                {
                    <span id="@(city.CityID)" data-cityid="@(city.CityID)" class="selected" style="background-color:#0088cc; margin-left: 10px;" onclick="spanclick('@(city.CityID)')">@city.City</span>
                }
                else
                {
                    <span id="@(city.CityID)" data-cityid="@(city.CityID)" style="margin-left: 10px;" onclick="spanclick('@(city.CityID)')">@city.City</span>
                }
            }
            cityLet = @city.Letter;
        }
    }
</div>
<table style="width:100%">
    <tbody>
        <tr>
            <td>城市 </td>
            <td><textarea class="DisplayName" id="DisplayName" readonly="true" style="width: 400px; height: 200px" value="@Model.CityName"> </textarea><a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-add',plain:true,onClick:function(){LookOplog();}"></a></td>
        </tr>
        <tr>
            <td>油漆产品 </td>
            <td>@Html.DropDownListFor(T => T.PID, ViewData["ddlPaintTypeData"] as SelectList, new { @id = "ddlType" }) <span>@Html.ValidationMessageFor(T => T.PID)</span></td>
        </tr>
        <tr>
            <td>价格/标准面 </td>
            <td> <input class="Price" id="Price" type="text" value="@Model.Price" /></td>
        </tr>
    </tbody>
</table>
<div>
    <input type="hidden" id="PKID" value="@Model.PKID" />
    <input type="hidden" id="PID" value="@Model.PID" />
    <input type="hidden" id="IsCountry" value="@Model.IsCountry" />
    <input type="hidden" id="LastUpdateTime" value="@Model.UpdatedTime" />
    <input type="hidden" id="CreateTime" value="@Model.CreatedTime" />
    <input type="hidden" id="CityIds" value="" />
</div>
<br /><br />
<div style="text-align:center; width:100%;height:100%;margin:0px; ">
    <a class="button1" href="javascript:;" style="margin-bottom: 20px; float:none" onclick="savecity()">保存</a>
</div>
<script type="text/javascript">
    $(function () {

        $('select#ddlType').change(function () {
            var type = $(this).val();
            $.ajax({
                type: "POST",
                url: "/CityPaint/SelectPaintCityListByPid",
                data: {
                    "pid": $("#ddlType").val(),
                    "pkid": $("#PKID").val()
                },
                dataType: "json",
                success: function (result) {

                    result.forEach(function(o) {

                        var a = document.getElementById(o.CityId);
                        var b = $("#" + o.CityId);

                        if (b.attr("class") == "selected") {
                            a.currentColor = "";
                            a.style.backgroundColor = "";
                            b.removeClass("selected");
                        }

                    });

                        var spans = $("#city span");
                        var citys = "";
                        var cityIds = "";


                        spans.each(function () {

                            if ($(this).attr("class") == "selected") {
                                citys = citys + $(this).text() + " ";
                                cityIds = cityIds + $(this).attr("id") + ",";
                            }
                            $("#DisplayName").val(citys);
                            $("#CityIds").val(cityIds);

                        });

                },
                error: function () {
                    alert("error");
                }
            });

            }

);

        var spans = $("#city span");
        var citys = "";
        var cityIds = "";

        spans.each(function () {

            if ($(this).attr("class") == "selected") {
                citys = citys + $(this).text() + " ";
                cityIds = cityIds + $(this).attr("id") + ",";
            }
            $("#DisplayName").val(citys);
            $("#CityIds").val(cityIds);

        });

        }
);
    function spanclick(e) {

        var a = document.getElementById(e);
        var b = $("#" + e);

        if (b.attr("class") == "selected") {
            a.currentColor = "";
            a.style.backgroundColor = "";
            b.removeClass("selected");
            var spans = $("#city span");
            var citys = "";
            var cityIds = "";


            spans.each(function () {

                if ($(this).attr("class") == "selected") {
                    citys = citys + $(this).text() + " ";
                    cityIds = cityIds + $(this).attr("id") + ",";
                }
                $("#DisplayName").val(citys);
                $("#CityIds").val(cityIds);

            });
        }
        else
        {
            if (e > 0) {

                $.ajax({
                    type: "POST",
                    url: "/CityPaint/GetCityPaintByPIDAndCityId",
                    data: {
                        "pid": $("#ddlType").val(),
                        "cityId": e,
                        "pkid": $("#PKID").val()
                    },
                    dataType:"json",
                    success: function (result) {

                        if (result.msg == "fail") {
                            alert("城市此产品已有配置，请重新选择");
                        } else {
                            a.currentColor = "r";
                            a.style.backgroundColor = "#0088cc";
                            b.addClass("selected");
                            var spans = $("#city span");
                            var citys = "";
                            var cityIds = "";


                            spans.each(function () {

                                if ($(this).attr("class") == "selected") {
                                    citys = citys + $(this).text() + " ";
                                    cityIds = cityIds + $(this).attr("id") + ",";
                                }
                                $("#DisplayName").val(citys);
                                $("#CityIds").val(cityIds);

                            });
                        }
                    },
                    error:function() {
                        alert("error");
                    }
                });

            }


        }


    }

    function savecity() {
        var cityIds = $("#CityIds").val();
        if (confirm("是否确认要保存？")) {
            var pkid = $("#PKID").val();
            if (pkid == "0") {
                $.post("/CityPaint/InsertCityPaintItem", { pid: $("#ddlType").val(), displayName: $("#ddlType option:selected").text(), price: $("#Price").val(), pkids: cityIds }, function(data) {

                    if (data.msg == "success") {
                        alert("保存成功！");
                        window.location.href = "/CityPaint/MultiCityPaintList";

                    } else {
                        alert("保存失败！");
                    }
                });
            } else {
                $.post("/CityPaint/UpdateCityPaintItem", { pkid: pkid, pid: $("#ddlType").val(), displayName: $("#ddlType option:selected").text(), price: $("#Price").val(), pkids: cityIds }, function (data) {

                    if (data.msg =="success") {
                        alert("保存成功！");
                        window.location.href = "/CityPaint/MultiCityPaintList";

                    } else {
                        alert("保存失败！");
                    }
                });
            }
        }
    }

    function LookOplog() {
        var temp = $("#city").is(":hidden");//是否隐藏
        var temp1 = $("#city").is(":visible");//是否可见

        if (temp) {
            $("#city").show();
        } else {
            $("#city").hide();
            }
    }
</script>
