
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Index.cshtml";
}

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a class="btn btn-primary" onclick="betn_searchlog()">
                <span class="fa fa-search">查看日志</span>
            </a>
        </div>

        <div class="btn-group">
            <a id="NF-add" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新增模块</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-copy" authorize="yes" onclick="btn_copy()"><i class="fa fa-pencil-square-o"></i>复制模块</a></li>
                <li><a id="NF-contentcopy" authorize="yes" onclick="btn_copyContent()"><i class="fa fa-pencil-square-o"></i>复制模块内容</a></li>
                <li><a id="NF-edit" authorize="yes" onclick="btn_update()"><i class="fa fa-pencil-square-o"></i>修改模块</a></li>
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除模块</a></li>
                <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看模块内容</a></li>                

            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
</div>

<script type="text/javascript"> 
    function gridList() {
        var $gridList = $('#gridList');
        $gridList.dataGrid({
            height: $(window).height() - 88,
            url: '/WechatHome/GetWechatHomeList?homepageconfigId=' + $.request("homepageconfigId"),
            colModel: [
                { label: "ID", name: "ID", width: 120, align: "center", hidden: true },
                { label: "模块名称", name: "Title", width: 160, align: "center" },
                { label: "类型", name: "TypeName", width: 160, align: 'left' },
                {
                    label: "是否启用", name: "IsEnabled", width: 220, align: "center",
                    formatter: function (cellvalue) {
                        return cellvalue == 1 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
              
                { label: "排 序", name: "OrderBy", width: 100, align: "left" }


            ],
            viewrecords: true
        });
    }

    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增模块",
            url: "/WechatHome/Edit?homepageconfigId=" + $.request("homepageconfigId"),
            width: "500px",
            height: "400px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });

        return;
        $('.menuItem', self.parent.document).each(function (e) {
            var id = $(this).data("id");
            var menuName = $(this).html();
            var dataUrl = $(this).attr("href");
            var dataId = id;
            if (id == "252229DB-35CA-47AE-BDAE-C9903ED5BA7v") {
                var str = '<a href="javascript:;" class="active menuTab" data-id="' + dataUrl + '">' + menuName + ' <i class="fa fa-remove"></i></a>';
                $('.menuTab', self.parent.document).removeClass('active');
                var str1 = '<iframe class="NFine_iframe" id="iframe' + dataId + '" name="iframe' + dataId + '"  width="100%" height="100%" src="' + dataUrl + '" frameborder="0" data-id="' + dataUrl + '" seamless></iframe>';
                $('.mainContent', self.parent.document).find('iframe.NFine_iframe').hide();
                $('.mainContent', self.parent.document).append(str1);
                $.loading(true);
                $('.mainContent iframe:visible', self.parent.document).load(function () {
                    $.loading(false);
                });
                $('.menuTabs .page-tabs-content', self.parent.document).append(str);
                self.parent.$.nfinetab.scrollToTab($('.menuTab.active'));
            }
        });
    }


    function btn_reload() {
     
        var url = location.origin.replace("setting", "wx") + '/wechatapp/FreshWechatHomeNew';       
            window.open(url, "_bank")
      
    }

    function btn_update() {

        var keyValue = $("#gridList").jqGridRowValue().ID;
        $.modalOpen({
            id: "Form",
            title: "修改模块",
            url: "/WechatHome/Edit?homepageconfigId=1&id=" + keyValue,
            width: "500px",
            height: "600px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    function btn_delete() {
        var keyValue = $("#gridList").jqGridRowValue().ID;
        if (keyValue) {
            $.deleteForm({
                url: "/WechatHome/DeleteWechatHome",
                param: { id: keyValue },
                success: function () {
                    self.location.reload();
                }
            });
        }
    }

    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().ID;
        var type = $("#gridList").jqGridRowValue().TypeName;
        if (keyValue) {
            if (type == '拼团模块')
            {
                location.href = "/WechatHome/ProductContentList?fkid=" + keyValue;
            }
            else
            {
                location.href = "/WechatHome/ContentList?fkid=" + keyValue;
            }
           
        }
    }

    function betn_searchlog() {
        $.modalOpen({
            id: "Form",
            title: "查看日志",
            url: "/Logger/ListLoger?objectType=WHPLoger",
            width: "1500px",
            height: "600px",
            btn: null
        });
    }

   
    

    function btn_copy() {
        var keyValue = $("#gridList").jqGridRowValue().ID;
       // var actionText ="<h5><font color='red'>"+"复制后请立刻修改模块名称，否则会导致轻应用首页错乱！</font></h5>"
        $.confirmForm({
            prompt: "您确定复制这个模块吗?",
            loading:"处理中......",
            title: "复制模块",
            url: "/WechatHome/SaveWechatHomeCopy?id=" + keyValue,
            success: function (iframeId) {
                self.location.reload();
            }
        });
    }

    function btn_copyContent() {
        var keyValue = $("#gridList").jqGridRowValue().ID;
        if (keyValue) {
            $.modalOpen({
                id: "Form",
                title: "复制模块内容",
                url: "/WechatHome/ContentCopy?id=" + keyValue,
                width: "500px",
                height: "400px",
                callBack: function (iframeId) {
                    top.frames[iframeId].submitForm();
                }
            });
        }
    }

    $(function () {
       
        gridList();
    })
</script>

