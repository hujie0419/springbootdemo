@model List<Tuhu.Provisioning.DataAccess.Entity.BaoYangActivityRelevance>
@{
    Layout = "";
    var Series = ViewData["Series"];
}
<style>
    body {
        font-family: "Microsoft Yahei";
    }

    .btn {
        margin-top: 20px;
        padding: 5px 25px;
        border: none;
        color: #F0F0F0;
        font-size: 12px;
        outline: none;
        cursor: pointer;
        background: cornflowerblue;
        border-color: cornflowerblue;
    }
</style>

<div class="Serie">
    <fieldset>
        @foreach (var item in Model)
        {
            if (!string.IsNullOrWhiteSpace(item.Series))
            {
                <input type="checkbox" Series="@item.Series" />
                <label>@item.Series</label>
            }
        }
    </fieldset>
 
</div>
<script>
    $('input[type=checkbox]').click(function () {
        $(this).attr('checked', 'checked').siblings().removeAttr('checked');
    });
   
    var series = "@Series" || "";
    var seriesArry = new Array();
    seriesArry = series.split(";");    
    $(function () {
        $(".Serie :checkbox").each(function (i) {
            if (seriesArry.indexOf($(this).attr("Series")) >= 0) {
             
                $(this).attr("checked", "checked");
            }
        });
    })

    function BrandChecked() {
        var SeriesTypes = "";
        $(".Serie :checkbox").each(function (i) {
            if ($(this).attr("checked")) {
                if ($(this).attr("Series")) {
                    SeriesTypes += $(this).attr("Series");
                }
            }
        });
        return SeriesTypes;
     
        //$("#AddSerie").dialog('close');
    }
</script>