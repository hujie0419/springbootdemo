            }

            .filterItem > .name {
                float: left;
                width: 80px;
            }

            .config_title {
                font-size: 1.2em;
                margin-top: 2px;
                margin-bottom: 5px;
            }

            .config_name {
                width: 100px;
            }

            .input {
                border-radius: 3px;
            }
            .mainTitle{
                background-color:gainsboro;
