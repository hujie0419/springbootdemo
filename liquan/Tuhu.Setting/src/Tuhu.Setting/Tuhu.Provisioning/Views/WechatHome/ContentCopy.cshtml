<script src="/Scripts/ajaxfileupload.js" type="text/javascript"></script>
<script type="text/javascript">
    ///showImg：上传时Image显示的标签ID
    //showUrl:真正显示的
    function UploadBgImg(obj, showImg, showUrl) {

        var pobj = $(obj);
        var fileSize = pobj[0].files[0].size / 1024 * 1.0;
        if (fileSize > 1024) {
            alert("不能上传大于1024KB的图片");
            return false;
        }
        var rd = Math.ceil(Math.random() * 9999) + 1;
        var fileElId = $(obj).attr("id");
        console.log(fileElId);
        $.ajaxFileUpload({
            url: '/Article/ImageUploadToAli?rd=' + rd,
            secureuri: false,
            fileElementId: fileElId,
            dataType: 'json',
            async: false,
            success: function (result) {
                if (result.BImage != "" && result.SImage != "") {
                    $("#" + showImg).attr("src", result.SImage).show();
                    $("#" + showUrl).val(result.BImage);
                } else {
                    alert("上传失败！");
                }
            },
            error: function (data, status, e)//服务器响应失败处理函数
            {
                alert(e);
            }
        });
    }

    function submitForm() {

        $.submitForm({
            url: "/WechatHome/SaveWechatHomeContentCopy",
            param: {
                sourceid: @ViewBag.id,
                destid: $("#ModuleOptions").val(),
                ispintuan: @ViewBag.isPintuan
            },
            success: function () {
                //  self.parent.$("#gridList").resetSelection();
                self.parent.$("#gridList").trigger("reloadGrid");
                self.parent.$('#loadingPage').hide();
                self.parent.window.frames[0].location.reload();
            }
        })
    }


    function ConfigOptionChange(selectedText) {

        //  Func.OrderTypeOptionChange($("#OrderTypeOptions").val());


        $.ajax({
            url: "/WechatHome/GetWechatHomeListFilter",
            type: "POST",
            data: {
                ispintuan: @ViewBag.isPintuan,
                sourceid:@ViewBag.id,
                homepageconfigId: selectedText
            },
            dataType: "json",
            async: false,
            success: function (data) {
                var html = "";
                var n = data.length;
                var nodatahtml = null;
                var i = 1;
                if (n > 0) {

                    for (var j = 0; j < n; j++) {

                        html += "<option value='" + data[j].ID + "'" + " selected>" + data[j].Title + "</option>";

                    }

                    $("#ModuleOptions").empty();
                    $("#ModuleOptions").append(html);
                    $("#ModuleOptions").enable = true;




                }
                // SecondLevelOptionChange($("#SecondLevelOptions").val())

                else {
                    html = "<option value='" + "" + "'>" + "" + "</option>";
                    $("#ModuleOptions").empty();
                    $("#ModuleOptions").append(html);
                    $("#ModuleOptions").enable = false;
                }
            },
            error: function () {
                alert("请求失败！");
                var html = "<option value=''>无数据</option>";
                $("#ModuleOptions").empty();
                $("#ModuleOptions").append(html);

            },
        });
    }

    function LoadConfigOption() {
        $.ajax({
            url: "/WechatHome/GetHomePageConfigList",
            type: "POST",
            data: {},
            dataType: "json",
            async: false,
            success: function (data) {
                var html = "";
                var n = data.length;
                if (n > 0) {
                    for (var j = 0; j < n; j++) {
                        html += "<option value='" + data[j].ID + "'>" + data[j].Name + "</option>";
                    }
                }

                $("#ConfigOptions").empty();
                $("#ConfigOptions").append(html);
                ConfigOptionChange($("#ConfigOptions").val());
            },
            error: function () {
                alert("请求失败！");

                $("#ConfigOptions").empty();
                $("#ConfigOptions").append(html);
                ConfigOptionChange("");
            },
        });
    }


    $(function () {

        LoadConfigOption();
    })
</script>



