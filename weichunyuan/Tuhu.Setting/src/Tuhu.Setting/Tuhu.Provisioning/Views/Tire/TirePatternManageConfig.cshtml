
@{
    ViewBag.Title = "轮胎花纹管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<string>

@section head{
    <link href="~/Content/nfine/js/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <style>
        .title {
            float: left;
        }

        .content {
            clear: both;
        }

        .condition .name {
            font-size: 16px;
            font-weight: bold;
        }

        .condition > div {
            margin-bottom: 10px;
        }
    </style>
}
<div class="title">
    <h2>轮胎花纹管理</h2>
</div>
<div class="content">
    <div class="condition">
        <div>
            <span class="name">筛选条件：</span>
        </div>
        <table style="font-size:12px;width:30%;">
            <tr>
                <td style="width:25%;">品牌：</td>
                <td>
                    <input type="text" name="makeupCo" id="makeupCo" class="makeinp" onfocus="setfocus(this)" oninput="setinput(this);" style="width:100%;" />
                    <select id="Brand" name="Brand" onchange="changeF(this)" size="10" style="display:none; width:100%;">
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <option value="item">@item</option>
                            }
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td style="width:25%;">花纹：</td>
                <td>
                    <input id="InputPattern" type="text" name="Pattern" value="" style="width:100%;" />
                </td>
            </tr>
        </table>
        </br>
        <div>
            <button type="button" class="btn btn-primary btn-small" onclick="CheckToSubmit(1)">查询</button>
            <button type="button" class="btn btn-primary btn-small" onclick="ClearInput()">清空</button>
        </div>
    </div>
    <div>
        每页显示：
        <select id="PageDataQuantity" onchange="CheckToSubmit(1)">
            <option value="10" selected="selected">10</option>
            <option value="20">20</option>
            <option value="50">50</option>
            <option value="100">100</option>
        </select> 条&nbsp;&nbsp;
        <span id="DataCountInfo"></span>
        <button type="button" class="btn btn-primary btn-small" onclick="BtnAdd()">+ 新增花纹</button>
    </div>
</div>
<div class="contact" id="ForTableTirePatternConfig" style="margin:10px 0 10px 0;">
    <!--输出表格-->
</div>
<div id="TirePatternConfigEditModule" style="display:none;"></div>
<div id="TirePatternChangeHistoryModule" style="display:none;"></div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#ForTableTirePatternConfig").on("click", ".pager>a", function (event) {
            event.preventDefault();
            var url = $(this).attr("href");
            if (url) {
                $.post(url, function (html, status) {
                    if (status === "success") {
                        $("#ForTableTirePatternConfig").html(html);
                    }
                });
            }
        });
        CheckToSubmit(1);
    });
    var TempArr = [];
    $(function () {
        $("#Brand option").each(function (index, el) {
            TempArr[index] = $(this).text();
        });
        $(document).bind('click', function (e) {
            var e = e || window.event;
            var elem = e.target || e.srcElement;
            while (elem) {
                if (elem.id && (elem.id == 'Brand' || elem.id == "makeupCo")) {
                    return;
                }
                elem = elem.parentNode;
            }
            $('#Brand').css('display', 'none');
        });
    })
    function changeF(this_) {
        $(this_).prev("input").val($(this_).find("option:selected").text());
        $("#Brand").css({ "display": "none" });
    }
    function setfocus(this_) {
        $("#Brand").css({ "display": "" });
        var select = $("#Brand");
        select.empty();
        setinput(this_);
        if (!select) {
            for (i = 0; i < TempArr.length; i++) {
                var option = $("<option></option>").text(TempArr[i]);
                select.append(option);
            }
        }
    }
    function setinput(this_) {
        var select = $("#Brand");
        select.html("");
        for (i = 0; i < TempArr.length; i++) {
            if (TempArr[i].indexOf(this_.value) != -1) {
                var option = $("<option></option>").text(TempArr[i]);
                select.append(option);
            }
        }
    }
    function CheckToSubmit(index) {
        var brand = $("#Brand").val();
        if (brand == null) brand = $("#makeupCo").val();
        if (brand == null) brand = "";

        var pattern = $("#InputPattern").val();
        var pagedataquantity = $("#PageDataQuantity").val();
        var pageIndex = index;

        $.post("/Tire/TirePatternConfigList", {
            PatternCriterion: pattern,
            BrandCriterion: brand,
            PageIndex: pageIndex,
            PageDataQuantity: pagedataquantity
        }, function (html, status) {
            if (status === "success") {
                $("#ForTableTirePatternConfig").html(html);
            }
        });
    }
    function ClearInput() {
        window.location.reload();
    }
    function TirePatternConfigEdit(pattern) {
        $("#TirePatternConfigEditModule").html("").load("/Tire/TirePatternConfigEditModule?pattern=" + pattern);
        $("#TirePatternConfigEditModule").dialog({
            title: "编辑轮胎规格参数",
            width: 400,
            height: "auto",
            modal: true,
            resizable: false,
            buttons: {
                "保存": function () {
                    SaveTirePatternConfig(this);
                },
                "取消": function () {
                    $(this).dialog("close");
                }
            }
        });
    }
    function TirePatternChangeHistory(pattern) {
        $("#TirePatternChangeHistoryModule").html("").load("/Tire/TirePatternChangeHistoryModule?pattern=" + pattern);
        $("#TirePatternChangeHistoryModule").dialog({
            title: "操作记录",
            width: 800,
            height: 400,
            modal: true,
            resizable: true
        });
    }
    function BtnAdd() {
        $("#TirePatternConfigEditModule").html("").load("/Tire/TirePatternConfigEditModule?pattern=");
        $("#TirePatternConfigEditModule").dialog({
            title: "新增轮胎花纹",
            width: 450,
            height: "auto",
            cache: false,
            model: true,
            shadow: true,
            buttons: {
                "保存": function () {
                    SaveTirePatternConfig(this, "add");
                },
                "取消": function () {
                    $(this).dialog("close");
                }
            }
        });
    }
    function TirePatternConfigEdit(e) {
        $("#TirePatternConfigEditModule").html("").load("/Tire/TirePatternConfigEditModule?pattern=" + encodeURIComponent($(e).attr("data-brand")));
        $("#TirePatternConfigEditModule").dialog({
            title: "新增轮胎花纹",
            width: 450,
            height: "auto",
            cache: false,
            model: true,
            shadow: true,
            buttons: {
                "保存": function () {
                    SaveTirePatternConfig(this, "edit");
                },
                "取消": function () {
                    $(this).dialog("close");
                }
            }
        });
    }
</script>
