
@{
    ViewBag.Title = "AreaContentList";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<style>
    .ui-widget-overlay {
        position: relative;
    }
</style>

    <div class="topPanel" > <div class="toolbar" > <div class="btn-group" > <a id="NF-add" class="btn btn-primary dropdown-text" onclick="btn_add()" > <i class="fa fa-plus" > </i > 新增区域模块内容</a > </div > <div class="operate" > <ul class="nav nav-pills" > <li class="first" > 已选中<span > 1</span > 项</li > <li > <a id="NF-copy" authorize="yes" onclick="btn_copy()" > <i class="fa fa-pencil-square-o" > </i > 复制新增</a > </li > <li > <a id="NF-edit" authorize="yes" onclick="btn_update()" > <i class="fa fa-pencil-square-o" > </i > 修改内容</a > </li > <li > <a id="NF-delete" authorize="yes" onclick="btn_delete()" > <i class="fa fa-trash-o" > </i > 删除内容</a > </li > </ul > <a href="javascript:;" class="close" > </a > </div > </div > </div > <div class="gridPanel" > <table id="gridList" > </table > </div > <script type="text/javascript" > function gridList() {
        var $gridList = $('#gridList');
        $gridList.dataGrid({
            height: $(window).height() - 88,
            url: '/WechatHome/GetAreaContentList?fkid=' + $.request("fkid"),
            colModel: [
                { label: "FKID", name: "FKID", width: 120, align: "center", hidden: true },
                { label: "ID", name: "ID", width: 120, align: "center" },
                { label: "城市名称列表", name: "CityList", width: 260, align: 'center' },

                {
                    label: "是否启用", name: "IsEnabled", width: 200, align: "left",
                    formatter: function (cellvalue) {
                        return cellvalue == 1 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },

                {
                    label: "图 片", name: "ImageUrl", width: 360, align: "center", formatter: function (cellvalue, options, rowObject) {
                        var img = "<img src='" + cellvalue + "' width='30' height='30' />";
                        return img;
                    }
                },

                { label: "跳转链接", name: "Uri", width: 200, align: "left" }


            ],
            viewrecords: true
        });
    }

    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增区域模块内容",
            url: "/WechatHome/AreaContentEdit?fkid=" + $.request("fkid"),
            width: "2000px",
            height: "2200px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }

    function btn_update() {
        var keyValue = $("#gridList").jqGridRowValue().ID;
        if (keyValue)

    {
        $.modalOpen({
                id: "Form",
                title: "修改区域模块内容",
                url: "/WechatHome/AreaContentEdit?fkid=" + $.request("fkid") + "&id=" + keyValue,
                width: "2000px",
                height: "2200px",
                callBack: function (iframeId) {
                    top.frames[iframeId].submitForm();
                }
            });
    }

    }

    function btn_delete() {
        var keyValue = $("#gridList").jqGridRowValue().ID;
        if (keyValue)

    {
        $.deleteForm({
                url: "/WechatHome/DeleteAreaContent",
                param: { id: keyValue },
                success: function () {
                    self.parent.window.frames[0].location.reload();

                }
            });
    }

    }

    function btn_copy() {
        var keyValue = $("#gridList").jqGridRowValue().ID;
        if (keyValue)

    {
        $.modalOpen({
                id: "Form",
                title: "修改区域模块内容",
                url: "/WechatHome/AreaContentEdit?fkid=" + $.request("fkid") + "&id=" + keyValue+"&copy=true",
                width: "500px",
                height: "400px",
                callBack: function (iframeId) {
                    top.frames[iframeId].submitForm();
                }
            });
    }

    }

    $(function () {
        gridList();
    }); </script >
