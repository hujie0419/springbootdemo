@model Tuhu.Provisioning.DataAccess.Entity.RulesDictionaryConfig
@{
    Layout = null;
}

<style>
    .btn {
        margin-top: 20px;
        padding: 5px 25px;
        border: none;
        color: #F0F0F0;
        font-size: 12px;
        outline: none;
        cursor: pointer;
        background: cornflowerblue;
        border-color: cornflowerblue;
    }

    a {
        color: cornflowerblue;
    }
</style>
<script src="../../Scripts/ajaxfileupload.js" type="text/javascript"></script>

@using (Html.BeginForm(new { @enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(m => m.Id)
    <div>
        <table>
            <tr>
                <td style="width:20%;">描述</td>
                <td style="width:80%;">@Html.TextAreaFor(x => x.Content, new { @style = "width:100%;height:300px;",@name="Content" })</td>
            </tr>
            <tr>
                <td style="width:20%;">状态</td>
                <td style="width:80%;">
                    @Html.RadioButtonFor(m => m.Status, true) 启用
                    @Html.RadioButtonFor(m => m.Status, false) 禁用
                </td>
            </tr> 
            <tr>
                <td></td>
                <td><input type="button" value="保存" onclick="RulesDictionaryConfig.Save('@Model.Type')" class="btn" /></td>
            </tr>
        </table>
    </div>
}
