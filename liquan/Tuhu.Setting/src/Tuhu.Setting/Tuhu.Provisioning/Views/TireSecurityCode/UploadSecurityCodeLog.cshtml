@using Tuhu.Provisioning.DataAccess.Entity.TireSecurityCode
@model List<UploadSecurityCodeLog>
@{
    ViewBag.Title = "上传防伪码";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head{
    <link href="~/Content/nfine/js/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <style>
        .title {
            float: left;
        }

        .row {
            float: left;
            clear: both;
            border: dashed;
            border-width: thin;
            margin-bottom: 10px;
        }

        .content {
            clear: both;
        }

        .condition .name {
            font-size: 16px;
            font-weight: bold;
        }

        .condition .searchWord {
            font-size: 12px;
        }

        .condition > div {
            margin-bottom: 10px;
        }
    </style>
}
<div class="title">
    <h2>上传防伪码</h2>
</div>
<div class="row">
    <div class="span12" style="float: left">
        @using (Html.BeginForm("UploadSecurityCodeLogImport", "TireSecurityCode", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div style="float: left; margin-top: 20px; margin-bottom: 20px; margin-left: 20px;">
                <fieldset id="fileUpload">
                    <label>上传文件（txt文件）</label>
                    <div class="form-group">
                        <input type="file" id="inputFile" name="files">
                        <p class="help-block"></p>
                        <span style="color: Red; text-align: center;">@ViewBag.error</span>
                    </div>
                    <input type="submit" value="上传导入" class="btn btn-success" id="btnImport" />
                </fieldset>
            </div>
        }
    </div>
</div>
<div class="content">
    <div class="condition">
        <div>
            每页显示：
            <select id="PageDataQuantity" onchange="CheckToSubmit(1)">
                <option value="10" selected="selected">10</option>
                <option value="20">20</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select> 条&nbsp;&nbsp;
            <span id="DataCountInfo"></span>
        </div>
    </div>
</div>
<div class="contact" id="ForTableUploadSecurityCodeLog" style="margin:10px 0 10px 0;">
    <!--输出表格-->
</div>

<script src="/Scripts/ajaxfileupload.js" type="text/javascript"></script>
<script type="text/javascript" src="/Scripts/TimeObjectUtil.js"></script>
<link href="/Scripts/jquery-ui-timepicker-addon/jquery-ui-timepicker-addon.css" rel="stylesheet" type="text/css" />
<link href="/Scripts/ztree/css/zTreeStyle/zTreeStyle.css" rel="stylesheet" type="text/css" />
<script src="/Scripts/jquery-ui-timepicker-addon/jquery-ui-sliderAccess.js" type="text/javascript"></script>
<script src="/Scripts/jquery-ui-timepicker-addon/jquery-ui-timepicker-addon.js" type="text/javascript"></script>
<script src="/Scripts/zTree/js/jquery.ztree.core-3.5.min.js" type="text/javascript"></script>
<script src="/Scripts/zTree/js/jquery.ztree.excheck-3.5.min.js" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#ForTableUploadSecurityCodeLog").on("click", ".pager>a", function (event) {
            event.preventDefault();
            var url = $(this).attr("href");
            if (url) {
                $.post(url, function (html, status) {
                    if (status === "success") {
                        $("#ForTableUploadSecurityCodeLog").html(html);
                    }
                });
            }
        });
        CheckToSubmit(1);
    }
    );
    function CheckToSubmit(index) {
        var pagedataquantity = $("#PageDataQuantity").val();
        var pageIndex = index;

        $.post("/TireSecurityCode/UploadSecurityCodeLogList", {
            PageIndex: pageIndex,
            PageDataQuantity: pagedataquantity
        }, function (html, status) {
            if (status === "success") {
                $("#ForTableUploadSecurityCodeLog").html(html);
            }
        });
    }
</script>

