                //});
                location.href = "/LuckyWheel/WheelList";
            });

            $(".btnDel").on('click', function () {
              var r=  confirm("您确定删除吗?")
              if (r) {
                  var data = $(this).data("id");
                  $.ajax({
                      url: '/LuckyWheel/Delete',
                      type: 'post',
                      data: { id: data },
                      success: function (result) {
                          result = JSON.parse(result);
                          if (result.result == 1) {
                              alert("删除成功");
                              location.reload();
                          } else {
                              alert("删除失败");
                          }
                      },
                      error: function () {
                          alert("删除失败");
                      }
                  });
              }
            });

            $(".btnEdit").on('click', function () {
                var data = $(this).data("id");
                location.href = "/LuckyWheel/WheelList?id="+data;
            });

        })();
    </script>


