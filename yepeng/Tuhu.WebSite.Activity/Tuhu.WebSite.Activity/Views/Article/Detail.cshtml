@using Tuhu.WebSite.Component.Discovery.BusinessData;
@model Article
@{ 
    var CVM = ViewData["CommentList"] as List<Comment>;
    var IsAppRequest = Convert.ToBoolean(ViewData["IsAppRequest"]);
    Model.CoverImage = string.IsNullOrEmpty(Model.CoverImage) ? "" : Model.CoverImage.Split(new char[] { ';' }, StringSplitOptions.RemoveEmptyEntries)[0];
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>@Model.SmallTitle</title>
    <link href="http://resource.tuhu.cn/css/activity/detailcss/detail.min.css?v=2" rel="stylesheet" />
    <link href="http://resource.tuhu.cn/css/activity/detailcss/list.min.css?v=2" rel="stylesheet" />
    @*<link href="~/Content/detailCss/detail.min.css" rel="stylesheet" />
    <link href="~/Content/detailCss/list.min.css" rel="stylesheet" />*@
</head>
<body>
    <div style="margin:0 auto;" class="maxwidth">
        <div id="userInfo"></div>
        <section class='section boxContent'>
            @if (Model.Type == 5)//新文章
            {
                if (Model.CoverMode != CoverMode.NoPicMode.ToString() && !string.IsNullOrEmpty(Model.CoverImage))
                {
                    <div class="imgBox banner">
                        <img src="@Model.CoverImage" alt="@Model.SmallTitle">
                        <div class="bannerCover"><img src="http://resource.tuhu.cn/Content/images/cover.png"></div>
                        <p class="content title">@Model.SmallTitle</p>
                    </div>
                }
                else
                {
                    <div class="imgBox theme">@Model.SmallTitle</div>
                }
            }
            else//旧文章
            {
                if (!string.IsNullOrEmpty(Model.Image))
                {
                    <div class="imgBox banner">
                        <img src="@Model.Image" alt="@Model.SmallTitle">
                        <div class="bannerCover"><img src="http://resource.tuhu.cn/Content/images/cover.png"></div>
                        <p class="content title">@Model.SmallTitle</p>
                    </div>
                }
                else
                {
                    <div class="imgBox theme">@Model.SmallTitle</div>
                }
            }
            <div class='floor1 de-floor0'>
                <div>
                    <span class='maoqiu'>
                        @if (!string.IsNullOrEmpty(Model.CoverTag))
                        {
                            <span id="author" class="aucolor">@Model.CoverTag&nbsp;&nbsp;</span>
                        }                        
                        <span>@Model.PublishDateTime.Value.ToString("MM-dd HH:mm")</span>
                    </span>
                </div>
                <div class="brief">
                    <h3>@Model.Brief</h3>
                </div>
                <div class='de-page'>
                    @Html.Raw(Model.Content)
                </div>
                <div class='de-tag warp pageCategories' id="bq_list">
                    @if (ViewData["TagList"] != null)
                    {
                        foreach (var item in ViewData["TagList"] as List<Category>)
                        {
                            if (item.Disable)
                            {
                                <span class='tag-item' data-itemId="@item.Id">@item.Name</span>
                            }
                        }
                    }
                </div>
            </div>
        </section>

        @if (!IsAppRequest)
        {
            @Html.Partial("CommentList", CVM, new ViewDataDictionary { { "IsApp", "false" } })
        }
        <!-- 打开途虎养车按钮 -->
        <div class="attend-argu" style="display:none">
            <a href="javascript:void(0)" onclick="APPShare.OpenAppComment()"> 打开途虎养车，参与头条评论&nbsp;&nbsp;<span></span> </a>
        </div>
        <!--相关阅读-->
        <section class='section' id="xgyd">
            @if (ViewData["RelatedArticles"] != null)
            {
            @Html.Partial("RelatedArticleList", ViewData["RelatedArticles"])
            }
        </section>
        @if (IsAppRequest)
        {
            @Html.Partial("CommentList", CVM, new ViewDataDictionary { { "IsApp", "true" } })
        }
        <!--底部Bar-->
        <footer class="footer maxwidth foot" style="display:none">
            <input class="argu-con" type="text" placeholder="写评论..." id="addComment" readonly="readonly" />
            <span id="argueState" class="letter2"></span>
            <span class="ccount">@(Convert.ToInt32(ViewData["ArticleCommentCount"]) == 0 ? "" : ViewData["ArticleCommentCount"])</span>
            <span class="collect" id="favoriate"></span>
            <span id="favCount" class="fcount">@(Model.Vote != null && Model.Vote != 0 ? Model.Vote.ToString() : "")</span>
            <span class="share" id="shareImage"></span>
        </footer>
    </div>
    <!--点击图片查看大图-->
    <div class="dialog" id="dialog">
        <div class="dialog-bg"></div>
        <div class="content  swiper-container">
            <div class="img-list" id="imgList">
                <ul class="swiper-wrapper"></ul>
            </div>
        </div>
    </div>
    <!--收藏成功-->
    <div class="collected" style="display:none">
        <img src="http://resource.tuhu.cn/Content/images/success@3x.png" alt="" />
        <p>收藏成功</p>
    </div>

    <input type="hidden" id="ArticleId" value="@Model.PKID" />
    <input type="hidden" id="ArticleTitle" value="@Model.SmallTitle" />
    <input type="hidden" id="RelatedArticleId" value="" />
    <input type="hidden" id="ArticleDes" value="@Model.Brief" />
    <input type="hidden" id="ArticleCoverImage" value="@Model.CoverImage" />
    <input type="hidden" id="_hdScrollEventBottom" value="false" />
    <input type="hidden" id="_hdScrollEventRelated" value="false" />
    <input type="hidden" id="_hdScrollEventTagTop" value="false" />
    <input type="hidden" id="_hdMark" value="" />
    <script src="http://resource.tuhu.cn/Scripts/jquery-2.1.0.min.js" type="text/javascript"></script>
    <script src="http://resource.tuhu.cn/Js/WebViewJavascriptBridge.js" type="text/javascript"></script>
    <script src="http://file.tuhu.cn/activity/scripts/swiper.min.js" type="text/javascript"></script>
    <script src="http://resource.tuhu.cn/Scripts/Activity/CommentFile/ArticleProductRedirect.min.js?v=4" type="text/javascript"></script>
    <script src="http://resource.tuhu.cn/Scripts/Activity/CommentFile/DeepShare.js?v=1" type="text/javascript"></script>
    <script src="http://resource.tuhu.cn/Scripts/Activity/CommentFile/ta.min.js?v=3" type="text/javascript"></script>
    <!--<script src="https://res.tuhu.org/Activity/packing/packing.1.0.0.min.js" type="text/javascript"></script>-->
    <script src="http://resource.tuhu.cn/Scripts/Activity/CommentFile/detail.min.js?v=6" type="text/javascript"></script>
    <script>

        Ta.Run("pageview", "pv");

        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');
        ga('create', 'UA-24728550-3', 'auto');
        ga('set', 'dimension1', tracker.platform);
        ga('send', 'pageview');
    </script>
</body>

    </html>
