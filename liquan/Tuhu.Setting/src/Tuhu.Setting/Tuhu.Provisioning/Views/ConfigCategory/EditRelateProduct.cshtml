<table style="width:100%">
    <tbody>
        <tr>
            <td>显示顺序 </td>
            <td>
                <input class="Sort" id="Sort" type="text" value="@Model.Sort" />
                <span id="SortValid" style="color: red; display: none;" />
            </td>
        </tr>
    </tbody>
</table>
<input type="hidden" id="PKID" value="@Model.PKID" />
<input type="hidden" id="CategoryId" value="@Model.CategoryId" />
<div style="text-align:center; width:100%;height:100%;margin:0px; ">
    <a class="button1" href="javascript:;" style="margin-bottom: 20px; float:none" onclick="savecategory()">保存</a>
</div>
<script type="text/javascript">
    function savecategory() {
        var sort = $("#Sort").val();
        if (sort == '') {
            $("#SortValid").val("必填");
            $("#SortValid").show();
            return;
        }

        var zhengze = /^[0-9]*[1-9][0-9]*$/;
        if (!(zhengze.test(sort))) {
            $("#SortValid").html("必须是大于0的整数");
            $("#SortValid").show();
            return;
        }

        $("#SortValid").hide();

        if (confirm("是否确认要保存？")) {
            var pkid = $("#PKID").val();
            var categoryId = $("#CategoryId").val();
            if (pkid != "0" || pkid != "") {
                $.post("/ConfigCategory/UpdateRelateProduct", {
                    pkid: pkid, sort: sort
                }, function (data) {

                    if (JSON.parse(data) === true) {
                        alert("保存成功！");
                        window.location.href = "/ConfigCategory/SelectedRelateProductList?categoryId=" + categoryId;

                    } else {
                        alert("保存失败！");
                    }
                });
            }
        }
    }

</script>
